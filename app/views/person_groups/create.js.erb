 <% if @person_group.errors.empty? -%>
  
$('#person_groups').prepend('<%= escape_javascript(render(:partial => "person_groups/person_group", :locals =>{:person_group => @person_group })) %>');

$("#new_group").hide();

$('#person_group_mode').attr('mode', 'show');
$('.new_option[field="person_group"]').css("display","");
$('.close_option[field="person_group"]').css("display","none");
$('#<%= dom_id(@person_group) %>').effect('slide', {direction:'right'});

$('.find_group_meta_type').val("").change();

<%else%>

$("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
  $('#flash_messagee_image').css("display","");
  $("#flash_message").dialog( {
  modal:true,
  height: 'auto',
  width: 'auto',
  buttons: {

  OK: function(){

  $(this).dialog('close');
  }
  }
  });
  $('#flash_message').dialog('option', 'title', 'Error');
  $('#flash_message').parent().find("a").css("display","none");
  $("#flash_message").parent().css('background-color','#D1DDE6');
  $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');


<% end -%>

  