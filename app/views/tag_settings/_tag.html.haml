-form_for @tag, :url => {:controller => 'tags', :action => @tag.new_record? ? "create" : "update", :id => @tag.id}, :html => {:id => "tag_form2", :class => 'ajax_form'} do |tag|
  .container
    .form_line
      .field_100
        =tag.label :name, 'Name'
        =tag.text_field :name, :disabled=>(@tag.status == false)
      %br.clear
    .form_line
      .field_100
        =tag.label :category, 'Category'
        =tag.text_field :category, :disabled=>(@tag.status == false)
      %br.clear
    .form_line
      .field_100
        =tag.label :description, 'Description'
        =tag.text_field :description, :disabled=>(@tag.status == false)
      %br.clear
    .form_line
      .field_100
        = tag.label :status, 'Active'
        - if @tag.new_record?
          = tag.check_box :status, :checked => true, :style => "width:auto;"
        -else
          = tag.check_box :status, :style => "width:auto;"
        
        %input{:style => "display:none", :id => "type", :name =>"type", :value => @tag.class.to_s}
        %input{:style => "display:none", :id => "tag_type", :name =>"tag_type", :value => @tag_type.class.to_s}
        %input{:style => "display:none", :id => "tag_type_id", :name =>"tag_type_id", :value => @tag_type.id}
      %br.clear
    = submit_tag 'Submit', :style => "width:75px;"