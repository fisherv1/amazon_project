<% if @note.errors.empty? -%>
  $('#notes_list').prepend('<%= escape_javascript(render(:partial => @note)) %>');
  $("#new_note")[0].reset();
  $("#new_note").hide();
  $('#note_mode').attr('mode', 'show');
  $('.new_option[field="note"]').css("display","");
  $('#note_hidden_tab').attr('mode','show');
  $('.person_notes_toggle_button').css("display","");
  $('.organisation_note_close').css("display","none");
  
  $('.person_notes_close').css("display","none");
  $('#<%= dom_id(@note) %>').effect('slide', {direction:'right'});

  <%else%>
   $("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
  $("#flash_message").dialog( {
  modal:true,
  resizable: false,
   height: 'auto',
    width: 600,
  buttons: {

  OK: function(){

  $(this).dialog('close');
  }
  }
  });



  $('#flash_message').parent().find("a").css("display","none");
  $("#flash_message").parent().css('background-color','#D1DDE6');
  $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');
  $('#flash_message').dialog('option', 'title', 'Error');
<% end -%>