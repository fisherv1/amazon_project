.form_line
  .field_20
    = fax.label :contact_type_id, 'Type'
    = fax.collection_select :contact_type_id, ContactType.find(:all, :include => [:contact_meta_type], :conditions => "contact_meta_types.name = 'Fax'"), :id, :name
  .field_20
    = fax.label :pre_value, "Pre Value"
    = fax.text_field :pre_value
  .field_40
    = fax.label :value, "value"
    = fax.text_field :value
  .field_20
    = fax.label :post_value, "Pos value"
    = fax.text_field :post_value
%br{ :style=>"clear: both;"}
.form_line
  .field_100
    = fax.label :remarks, "Remarks"
    = fax.text_field :remarks
%br{ :style=>"clear: both;"}