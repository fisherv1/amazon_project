.full_container
  %h1 Existing Roles
  %table#show_roles_conditions_grid{:class=>"selectable_grid",:mode_field=>'condition_role_mode', :db_click_function=>"true", :edit=>"true", :db_click_url=>"/role_conditions/"}
%script{:type=>"text/javascript", :charset=>"utf-8"}
  :plain
    $("#show_roles_conditions_grid").flexigrid({
      url: '/grids/show_roles_grid?role_type_id=#{@role_type_id}',
      dataType: 'json',
      colModel: [
        {
          display: 'ID',
          name: 'id',
          width: 40,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Name',
          name: 'name',
          width: 570,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Description',
          name: 'description',
          width: 270,
          sortable: true,
          align: 'left'
        }
      ],
      
      searchitems:[
      {
        display: 'Name',
        name: 'name'
      },
      {
        display: 'Description',
        name: 'description'
      }
      ],

      sortname: "name",
      sortorder: "asc",
      usepager: true,
      title: '',
      useRp: true,
      rp: 20,
      showTableToggleBtn: false,
      width: 'auto',
      height: 'auto'
    });