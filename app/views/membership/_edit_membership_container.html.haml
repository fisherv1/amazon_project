-# locals => {:title => "Review, Approve..."}

%input.hidden{:id => "membership_mode", :mode => "show"}

#edit_membership{:style => "display:none;margin-top:10px;float:left;"}
  .tab_looking_left
  .tab_looking_icon
    = image_tag('edit_icon.png')
    %h3{:style=>"display:inline;"}
      = title
  .tab_looking_right

  %div.tab_close
    .tab_looking_left
    .tab_looking_icon
      = link_to_function image_tag('/images/Icons/System/close.png'), :field => "membership", :style => "display:none;", :title=>"Close", :class => "close_option close_edit", :toggle_id_name => "edit_membership"
    .tab_looking_right
      .options


  .full_container
    #edit_membership_form