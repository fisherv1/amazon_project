%h1 Initiator
.form_line
  .field_20
    %label <span class="asterisk">*</span>Initiator ID
    %input{:id => "reviewer_id", :name => "membership[initiated_by]",:class=>"compulsory_field membership_intiator_lookup",:update_field=>"initiator_name"}
  .field_5
    %label &nbsp;
    = link_to_function image_tag("Icons/System/search.png"), :class => "person_lookup", :update_field => "reviewer_id", :title=>"Search"
  .field_40
    %label Initiator
    .display_field_bg#initiator_name
      =@person.name unless @person.nil?
  .field_30
    %label <span class="asterisk">*</span>Initiator Date
    %input{:id => "reviewer_date", :name => "membership[initiated_date]", :class => "datepick compulsory_field", :value => Time.now.strftime("%d-%m-%Y")}
.form_line{:style => "height:auto;"}
  .field_100{:style => "height:auto;"}
    %label <span class="asterisk">*</span>Outcomes
    %textarea{:id=>"initiator_outcome",:name=>"membership[initiated_comment]",:style=>"width:100%;height:150px;",:class=>"compulsory_field"}
.form_line
  .field_20
    %label Mail Template Category
    = collection_select :letter_id, :template_id, MailMergeCategory.active_mail_merge_category, :id, :name, {:include_blank => true}, {:class => "select_ajax_call clear_select", :method => "GET", :url => "/amazon_settings/look_for_template", :update_field => "initiate_letter_id"}
  .field_20
    %label Mail Template
    %select{:id => "initiate_letter_id", :name => "membership[initiate_letter_id]", :class => "mail_template", :check_box_id => "initiate_letter_sent"}
  .field_20{:style => "display:none;"}
    %label Send Instant Mail
    %input{:type => "checkbox", :id => "initiate_letter_sent", :name => "membership[initiate_letter_sent]"}
  %br.clear