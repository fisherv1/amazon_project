.container
  %h1 Reviewer
  .form_line
    .field_20
      %label <span class="asterisk">*</span>Reviewer ID
      %input{:id => "reviewer_id", :name => "membership[reviewed_by]", :value => "ID",:class=>"mandantory_field membership_intiator_lookup",:mandantory_field1=>"reviewer_id",:submit_button_id=>"new_membership_submit",:update_field=>"reviewer_name"}
    .field_5
      %label &nbsp;
      = link_to_function image_tag("Icons/System/search.png"), :class => "person_lookup", :update_field => "suspended_by", :title=>"Search"
    .field_40
      %label Reviewer
      .display_field_bg#reviewer_name

    .field_30
      %label Review Date
      %input{:id => "reviewer_date", :name => "membership[reviewed_date]", :class => "datepick", :value => Time.now.strftime("%d-%m-%Y")}
  .form_line{:style => "height:auto;"}
    .field_100{:style => "height:auto;"}
      %label Output
      %textarea{:name=>"membership[reviewed_comment]",:style=>"width:100%;height:150px;"}
  .form_line
    .field_20
      %label Mail Template Category
      = collection_select :letter_id, :template_id, MailMergeCategory.active_mail_merge_category, :id, :name, {:include_blank => true}, {:class => "select_ajax_call clear_select", :method => "GET", :url => "/amazon_settings/look_for_template", :update_field => "review_letter_id"}
    .field_20
      %label Mail Template
      %select{:id => "review_letter_id", :name => "membership[review_letter_id]", :class => "mail_template", :check_box_id => "review_letter_sent"}
    .field_20{:style => "display:none;"}
      %label Send Instant Mail
      %input{:type => "checkbox", :id => "review_letter_sent", :name => "membership[review_letter_sent]"}
    %br.clear

