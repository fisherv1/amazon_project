
$('#edit_membership').show();
$('.close_option[field=membership]').show();
$('#membership_mode').attr('mode','edit');

$('#edit_membership_form').html('<%= escape_javascript(render(:partial => "/membership/membership_person_detail")) %>');
<%-if @type == "Initiated"%>
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_initiator_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/reviewer_form")) %>');
<%-elsif @type == "Reviewed"%>
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_initiator_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_reviewer_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/finalizer_form")) %>');

<%-elsif @type =="Approved"%>
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_initiator_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_reviewer_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_finalizer_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/suspend_form")) %>');


<%-elsif @type =="Suspended"%>
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_initiator_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_reviewer_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_finalizer_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/display_suspend_form")) %>');
$('#edit_membership_form').append('<%= escape_javascript(render(:partial => "/membership/terminate_form")) %>');
<%end%>
