.container
  %h1 Terminate
  .form_line
    .field_20
      %label Terminate ID
      %input{:id => "suspended_by", :name => "membership[terminated_by]", :value => "ID",:class=>"mandantory_field membership_intiator_lookup",:mandantory_field1=>"terminated_by",:submit_button_id=>"new_membership_submit",:update_field=>"terminated_name"}
    .field_5
      %label &nbsp;
      = link_to_function image_tag("Icons/System/search.png"), :class => "person_lookup", :update_field => "suspended_by", :title=>"Search"
    .field_40
      %label Terminate Name
      .display_field_bg#terminated_name

    .field_30
      %label Terminate Date
      %input{:id => "suspended_date", :name => "membership[terminated_date]", :class => "datepick", :value => Time.now.strftime("%d-%m-%Y")}
  .form_line{:style => "height:auto;"}
    .field_100{:style => "height:auto;"}
      %label Output
      %textarea{:name=>"membership[terminated_comment]",:style=>"width:100%;height:150px;"}
    %br.clear



  .form_line
    .field_20
      %label Mail Template Category
      = collection_select :letter_id, :template_id, MailMergeCategory.active_mail_merge_category, :id, :name, {:include_blank => true}, {:class => "select_ajax_call clear_select", :method => "GET", :url => "/amazon_settings/look_for_template", :update_field => "approve_letter_id"}
    .field_20
      %label Mail Template
      %select{:id => "approve_letter_id", :name => "membership[approve_letter_id]", :class => "mail_template", :check_box_id => "approve_letter_sent"}
    .field_20{:style => "display:none;"}
      %label Send Instant Mail
      %input{:type => "checkbox", :id => "approve_letter_sent", :name => "membership[approve_letter_sent]"}
    %br.clear