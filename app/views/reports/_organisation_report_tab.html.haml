-form_for :report, :url => {:controller => 'reports', :action => "person_contacts_report_grid"}, :html => {:class => "ajax_form"} do |tag_type|
  .full_container
    .form_line
      .field_30
        %div#organisation_report_select_list
          =tag_type.label :list, 'Select List'
          %select{:id => "organisation_report_list", :disabled => (@list_headers.blank?), :name => "organisation_list_header_id", :class => "clear_select"}
            %option{:selected => "selected"}
            %option{:value => "All Organisation"} All Organisation
           
      .field_30
        %div#organisation_report_format{:style => "display:none;"}
          =tag_type.label :format, 'Report Format'
          =tag_type.select(:organisation_requested_format, [["",""], ['Contact Report', "Contact Report"]], {:selected => ""}, :class => "clear_select")
      .field_10{:style => "float:right;"}
        %label &nbsp;
        = button_to_function 'Generate', :style => "display:none;height:auto;", :id => "organisation_report_submit_button"
  .form_line
    .field_30
      %div#organisation_report_details{:style => "display:none;", :align=> "middle"}
        %h1 Sample Report
        %div#organisation_report_sample_image
  .container#organisation_report_grid_form_container{:style => "display:none"}
    #organisation_report_grid_form
    = button_to_function 'Generate PDF', :style => "float:right;", :id => "report_organisation_pdf_submit_button"

