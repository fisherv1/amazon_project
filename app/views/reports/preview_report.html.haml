%h1
  ="#{@report_format}"

%div#generate_report{:style => "clear:both;float:left;"}
  -form_for :report, :url => {:controller => 'reports', :action => "generate_report"}, :html => {} do |tag_type|
    =tag_type.text_field :list, :name => "list_header_id", :value => @report_list.id, :style => "display:none"
    =tag_type.text_field :format, :name => "report[requested_format]", :value => @report_format, :style => "display:none"
    = submit_tag 'PDF', :style => "width:75px;", :id => "report_submit_button"

%table#report_results_data{:style => "clear:both;width:100%;float:left;"}
  = render :partial => "#{@report_format.downcase.sub(/ /, '_')}"

