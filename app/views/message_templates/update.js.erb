<% if @mail_template.errors.empty? -%>
  $('#add_new_mail_template').html('<%= escape_javascript(render(:partial => "/message_templates/new_mail_template")) %>').css('display','');
  $('#existing_mail_template').html('<%= escape_javascript(render(:partial => "/message_templates/existing_mail_template")) %>');
  $('#mail_template_mode').attr('mode', 'show');
  $('#edit_mail_template').css('display','none');


<%else%>
  $("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
 $('#flash_message').dialog( {
     modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 600,
  buttons:{
  Ok: function() {
  $(this).dialog('destroy');
  }
  }
  });
 $('#flash_message').dialog( 'option', 'title', 'ERROR');
 $('#flash_message').parent().find("a").css("display","none");
 $("#flash_message").parent().css('background-color','#D1DDE6');
 $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');


<%end%>

enable_form_after_submit_finish();