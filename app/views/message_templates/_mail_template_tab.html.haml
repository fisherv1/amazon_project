%div
  %input.hidden{:id => "mail_template_mode", :mode => "show"}

  #add_new_mail_template
    = render :partial => "message_templates/new_mail_template"
  
  #existing_mail_template
    = render :partial => "message_templates/existing_mail_template"

  #edit_mail_template{:style => "display:none;margin-top:10px;float:left;"}
    .tab_looking_left
    .tab_looking_icon
      = image_tag('edit_icon.png')
      Maintenance
    .tab_looking_right

    %div.tab_close
      .tab_looking_left
      .tab_looking_icon
        = link_to_function image_tag('/images/Icons/System/close.png'), :field => "mail_template", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_mail_template", :toggle_id_name1 => "add_new_mail_template"
      .tab_looking_right
        .options

    .full_container
      #edit_mail_template_form