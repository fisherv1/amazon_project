#list_detail_left
  = render :partial => "/lists/edit_#{@entity}_list_details_left"

#list_detail_right
  = render :partial => "/lists/edit_#{@entity}_list_details_right"



.container{:style=>"width:96%"}
  -form_for @list_header,:url => list_header_path(@list_header), :html => {:class => 'ajax_form'} do |f|
    %h1 Edit List
    .form_line
      .field_25
        =f.label :name, "<span class='asterisk'>*</span>Name"
        =f.text_field :name,:class=>"mandantory_field",:mandantory_field1=>"list_header_name",:submit_button_id=>"create_list_submit", :disabled => @list_header.status == false, :name => "list_header[name]"
      .field_25
        =f.label :description, "Description"
        =f.text_field :description, :disabled => @list_header.status == false, :name => "list_header[description]"
      .field_2
        =f.label :allow_duplication, '&nbsp'
        =f.check_box :allow_duplication, :style => "width:10px;", :name => "list_header[allow_duplication]"
      .field_10
        =f.label :allow_duplication, '&nbsp'
        =f.label :allow_duplication, "Allow Duplication", :style =>"margin-top:7px;"
      .field_2
        =f.label :status, '&nbsp'
        =f.check_box :status, :name => "list_header[status]", :style=>"width:10px;"
      .field_10
        =f.label :status, '&nbsp'
        =f.label :status, "Active", :style =>"margin-top:8px;"
      .field_10{:style=>"float:left;"}
        =f.label :status, "&nbsp;"
        =submit_tag "Update",:id=>"create_list_submit"

  .form_line
    .field_80
      %label Source
      %p{:style => "font-size:15px;"} #{@list_header.source}

