.container{:style => "width:60%"}
  -form_for @list_header, :url => "/list_headers/#{@list_header.id}/delete_details", :html => {:class => "ajax_form"} do |f|
    %h1{:style=>"margin-bottom:5px;"}  Organisation On List
    %table#list_edit_grid

%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    $('#list_edit_grid').flexigrid({
        url: '/grids/list_edit_grid',
        dataType: 'json',
        colModel : [
            {display: 'ID', name : 'grid_object_id', width : 40, sortable : true, align: 'left'},
            {display: 'Full Name', name : 'field_1', width : 180, sortable : true, align: 'left'},
            {display: 'Trading As', name : 'field_2', width : 180, sortable : true, align: 'left'}
        ],
        searchitems : [
            {display: 'Full Name', name : 'field_1'},
            {display: 'Trading As', name : 'field_2'}
        ],
        sortname: "grid_object_id",
        sortorder: "asc",
        usepager: true,
        useRp: true,
        rp: 20,
        showTableToggleBtn: false,
        width: "auto",
        height: 300
    });