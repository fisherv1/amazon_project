.container{:style => "background-image:none;"}
  -form_for ListHeader.new, :html => {:class => 'ajax_form'} do |f|
    .form_line
      = f.label :name, 'Name'
      = f.text_field :name, :value => ""
    
    .form_line
      = f.label :description, 'Description'
      = f.text_field :description
      %input{:style => "display:none", :name => "copy_source_id", :value => "#{@list_header.id}"}
    
    = submit_tag "Save", :name => "copy"