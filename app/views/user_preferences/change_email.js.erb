<% unless flash[:error].nil? %>
  $("#error_message_text").html("<%=escape_javascript(flash[:error])%>");
  $('#error_message_image').css("display","");
  $("#error_message").dialog( {
  modal: false,
  resizable: false,
  draggable: false,
  height: 'auto',
  width: 600,
  buttons: {

  OK: function(){

  $(this).dialog('close');
  }
  }
  });
  $('#error_message').dialog('option', 'title', 'Error');
  $('#error_message').parent().find("a").css("display","none");
  $("#error_message").parent().css('background-color','#D1DDE6');
  $("#error_message").css('background-color','#D1DDE6');

  $('#error_message').dialog('open');
  enable_form_after_submit_finish();
<%else%>
  $("#error_message_text").html("<%=escape_javascript(flash[:save_message])%>");
  $('#error_message_image').css("display","");
  $("#error_message").dialog( {
  modal: false,
  resizable: false,
  draggable: false,
  height: 'auto',
  width: 600,
  buttons: {

  OK: function(){

  $(this).dialog('close');
  }
  }
  });
  $('#error_message').dialog('option', 'title', 'Comfirmation');
  $('#error_message').parent().find("a").css("display","none");
  $("#error_message").parent().css('background-color','#D1DDE6');
  $("#error_message").css('background-color','#D1DDE6');
  $('#error_message').dialog('open');
  $('#modify_my_account_dialog').dialog('destroy');
<%end%>