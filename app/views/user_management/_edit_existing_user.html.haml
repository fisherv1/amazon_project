.container
  .options
    = link_to_function (image_tag('close_icon.png', :style => "float:right;margin-right:10px;"), :id =>"close_edit_account", :class =>  "close_option", :field => "login_account")
  .options_left{:style => "margin-right:10px;"}
    = image_tag('edit_icon.png', :style => "float:left;margin-right:10px;")
  %h3 Edit User
  %br

  -form_for @login_account, :html => {:class => 'ajax_form edit_login'} do |login|
    .form_line
      .field_5
        %span #{@login_account.person_id}
      .field_15
        %span{:id => "login_name_container_#{@login_account.id}"} #{@login_account.person.name}
      .field_25
        %span #{@login_account.last_login} (last login)
      .field_25
        %span #{@login_account.last_ip_address}(last ip address)
      
    .form_line
      .field_23
        = login.label :user_name, 'User Name'
        = login.text_field :user_name, :class => "check_username_unique", :login_account_id => @login_account.id
      -#.field_27
        %label &nbsp
        %span{:id => "user_name_container_#{@login_account.id}"} &nbsp&nbsp #{@login_account.user_name}
      .field_35
        = login.label :security_email, 'Email'
        = login.text_field :security_email
      -#.field_15
        = login.label :login_status, 'Status'
        = login.radio_button :login_status, true, :style => "width:10%"
        %label{:style => "display:inline"} Active
        &nbsp;&nbsp;
        = login.radio_button :login_status, false, :style => "width:10%"
        %label{:style => "display:inline"} Inactive
      .field_15
        = login.label :login_status, 'Active'
        = login.check_box :login_status, :class => "checkbox_style"
      .field_15
        = login.label :system_user, 'System User'
        = login.check_box :system_user,{:checked => true, :style => "width:10%"}
    .form_line
      .field_23
        = login.label :session_timeout
        -#= login.text_field :session_timeout, :readonly => true
        %select{:name => "login_account[session_timeout]"}
          %option{:value => "0", :selected => @session_timeout == 0} Unlimited
          %option{:value => "5", :selected => @session_timeout == 5} 5
          %option{:value => "10", :selected => @session_timeout == 10} 10
          %option{:value => "20", :selected => @session_timeout == 20} 20
          %option{:value => "30", :selected => @session_timeout == 30} 30
      .field_23
        -#= login.label :authentication_grace_period
        -#= login.text_field :authentication_grace_period, :readonly => true
        = login.label :authentication_grace_period, "New Account Grace Period(Days)"
        %select{:name => "login_account[authentication_grace_period]"}
          %option{:value => "0", :selected => @grace_period == 0} Unlimited
          %option{:value => "7", :selected => @grace_period == 7} 7
          %option{:value => "14", :selected => @grace_period == 14} 14
          %option{:value => "21", :selected => @grace_period == 21} 21
          %option{:value => "28", :selected => @grace_period == 28} 28
      .field_23
        -#= login.label :access_attempts_count
        -#= login.text_field :access_attempts_count, :readonly => true
        = login.label :access_attempts_count, "access_attempts_count(num)"
        %select{:name => "login_account[access_attempts_count]"}
          %option{:value => "0", :selected => @access_attempts_count == 0} Unlimited
          %option{:value => "3", :selected => @access_attempts_count == 3} 3
          %option{:value => "4", :selected => @access_attempts_count == 4} 4
          %option{:value => "5", :selected => @access_attempts_count == 5} 5
          %option{:value => "6", :selected => @access_attempts_count == 6} 6
      .field_20
        %label &nbsp
        = link_to_function 'Generate new password', :id => "generate_new_password", :login_account_id => @login_account.id
    .form_line
      .field_23
        =login.label :access_attempt_ip
        %span #{@login_account.access_attempt_ip}
      
    .form_line
      .field_15{:style => "float:right;"}
        = login.label :system_user, '&nbsp'
        = submit_tag 'Sumbit',{:style=> "float:none"}
        = link_to_function 'Clear', :class => "user_clear_edit_form clear_form",:login_account_id => @login_account.id




   

  

    



