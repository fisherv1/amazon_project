-form_for @login_account, :url=> {:controller => 'login_accounts',:action => @login_account.new_record? ? 'create' : 'update', :id => @login_account.id}, :html => {:class => 'ajax_form'} do |login|
  .form_line
    .field_10
      = login.label :person_id, 'System ID'
      = login.text_field :person_id, :class => "check_login_id", :login_account_id => @login_account.new_record? ? 0 : @login_account.id
    .field_22
      %label &nbsp
      -if @login_account.new_record?
        %span{:id => "login_name_container_0"}
      -else
        %span{:id => "login_name_container_#{@login_account.id}"} #{@login_account.person.name}
  %br.clear
  .form_line
    .field_22
      = login.label :user_name, 'User Name'
      = login.text_field :user_name, :class => "check_username_unique", :login_account_id => @login_account.new_record? ? 0 : @login_account.id
    .field_22
      %label &nbsp
      -if @login_account.new_record?
        %span{:id => "user_name_container_0", :class => "viewname"}
      -else
        %span{:id => "user_name_container_#{@login_account.id}"} #{@login_account.user_name}
    .field_22
      = login.label :password, 'Password'
      = login.password_field :password, :class => "password"
    .field_22
      %div#login_account_password_text{:class => "pstrength-info"}
        %span{:style => "color:rgb(204, 204, 204);"}Password Strength
      %div#login_account_password_bar{:class => "pstrength-bar", :style => style="border: 1px solid white; font-size: 5px; height: 20px; width: 20%; background-color: rgb(204, 204, 204);" }
  %br.clear
  .form_line
    .field_40real
      = login.label :security_email, 'Email'
      = login.text_field :security_email
    .field_22
      = login.label :password_confirmation, 'Repeat Password'
      = login.text_field :password_confirmation, :disabled => true
    .field_22
      = login.label :password_hint, 'Password Hint'
      = login.text_field :password_hint
  %br.clear
  .form_line
    .field_22
      = login.label :security_question1_id, 'Question1'
      -if @login_account.new_record?
        = collection_select :login_account, :security_question1_id, SecurityQuestion.active_security_question, :id, :name,{:prompt => "select one" }
      -else
        = collection_select :login_account, :security_question1_id, SecurityQuestion.active_security_question, :id, :name, {:prompt => "#{@login_account.security_question.name}" }
    .field_22
      = login.label :question1_answer, 'Answer1'
      = login.text_field :question1_answer
    .field_22
      = login.label :security_question2_id, 'Question2'
      -if @login_account.new_record?
        = collection_select :login_account, :security_question2_id, SecurityQuestion.active_security_question, :id, :name,{:prompt => "select one" }
      -else
        = collection_select :login_account, :security_question2_id, SecurityQuestion.active_security_question, :id, :name, {:prompt => "#{@login_account.security_question.name}" }
    .field_22
      = login.label :question1_answer, 'Answer2'
      = login.text_field :question2_answer
  %br.clear
  .form_line
    .field_22
      = login.label :security_question3, 'Question3'
      -if @login_account.new_record?
        = collection_select :login_account, :security_question3_id, SecurityQuestion.active_security_question, :id, :name,{:prompt => "select one" }
      -else
        = collection_select :login_account, :security_question3_id, SecurityQuestion.active_security_question, :id, :name, {:prompt => "#{@login_account.security_question.name}" }
    .field_22
      = login.label :question3_answer, 'Answer3'
      = login.text_field :question3_answer
    .field_22
      = login.label :login_status, 'Status'
      -if @login_account.new_record?
        = login.radio_button :login_status, true, :style => "width:10%", :checked => true
        %label{:style => "display:inline"} Active
        &nbsp;&nbsp;
        = login.radio_button :login_status, false, :style => "width:10%"
        %label{:style => "display:inline"} Inactive
      -else
        = login.radio_button :login_status, true, :style => "width:10%"
        %label{:style => "display:inline"} Active
        &nbsp;&nbsp;
        = login.radio_button :login_status, false, :style => "width:10%"
        %label{:style => "display:inline"} Inactive
    

        
        %label{:style => "display:inline"} System User
  %br.clear
  .form_line
  .info_container
    %h3 Security Groups
  %p.submit
    = link_to_function 'Clear', :class => "user_clear_form alt_option", :style=>"float:right"
    = submit_tag 'Submit'
  %br.clear

