<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>EmZee Version 1.1 - The Community Social Solution</title>

    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load("jquery","1.3.2");
      google.load("jqueryui","1.7.1");
    </script>
    <%= stylesheet_link_tag   "jpassword", "guest.css","jquery-ui-1.7.1.custom.css","watermark" %>
    <%= javascript_include_tag  "guest.js",
      "jquery.jclock.js",
      "jquery.jpassword.js",
      "jquery.form.js",
      "jquery.updnWatermark.js"
  %>

  </head>

  <body>
    <div id="top_bar"><div id="go_back_link"><a style="margin-left: 10%" href=""><< back to Aghapy TV website</a></div></div>
    <div id="signin_container" title="Login Assistance">
      <div id="signin_logo" ></div>

    </div>

    <div id="signin_container" title="Login Assistance">
      <div id="reset_form" style="padding:0 10%">
        <div class="sign_content_title"> Welcome <%=@user.first_name%> </div>
        <div id="signin_form_wrapper">
          <% form_tag('/guests/reset/',:id=>"reset_guest_password", :submit_button_id => "reset_button") do -%>
            <div class="form_line">
              <div class="field_90">
                <input id="old_password" class="field compulsory_field validate[required,length[6,30]]" type="password" size="28" name="guests[old_password]"  title="Old Password (Generated by us)"/><br />
              </div>
            </div>
            <div class="form_line">
              <div class="field_90">
                <input id="new_password" class="field compulsory_field password_change jpassword-lefttop validate[required,length[6,30]]" type="password" size="28" name="guests[new_password]"  title="New Password"/><br />


              </div>
            </div>

            <div class="form_line">
              <div class="field_90">
                <input id="repeat_new_password" class="field compulsory_field validate[required,length[6,30],confirm[new_password]]" type="password" size="28" name="guests[repeat_new_password]"  title="Repeat New Password"/><br />
              </div>
            </div>

         
            <div class="form_line">

              <input id="reset_button" type="submit" value="Complete Registration" disabled="true"/>

            </div>
          <% end -%>
        </div>


      </div>
      <br style="clear:both"></br>
    </div>
  </body>
</html>
