#photo_details.info_container
  .header_container
    .title
      %h3 Picture
    .options
      = link_to_function image_tag('edit_icon.png',:value => "Edit Photo"), :id=>"edit_photo_link"
      = link_to image_tag('delete_icon.png'), person_photo_path(person), :class => "delete", :confirm => "Are you sure?"
    %br{:style=>"clear:both;"}
  #photo.center
    -if person.has_photo?
      Display the photo
    -else
      No photo
  #edit_photo{:style=>'display:none'}
    = render :partial => '/photos/edit_photo', :locals =>{ :person => person,:photo => person.photo }
  
