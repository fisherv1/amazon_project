%div#keyword_entries
  - for setting in @type
    - setting_status = setting.status ? "container_active" : "container_inactive"
    %div{:class => "#{setting_status} toggle_options", :keyword_id => setting.id, :style => "width:26%;", :field => "keyword" }
      .options{:style => "display:none;"}
        = link_to image_tag('edit_icon.png'), edit_keyword_path(setting), :class => 'get edit_keyword edit_option', :field => "keyword", :id => 'edit_current_keyword_entry', :keyword_id => setting.id
        = link_to (image_tag('delete_icon.png'), keyword_path(setting), :class => 'delete delete_keyword delete_option', :field => "keyword", :id => 'keyword_delete_button', :keyword_id => setting.id) unless !setting.status
      .title
        = setting.name