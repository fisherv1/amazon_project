-# The main Keyword tab
#keywords_tab.info_container
  .header_container
    .title
      %h3 Keyword
    .options
      = image_tag('help_icon.png')
    %br{ :style=>"clear: both;"}
  = if (!person.nil? && !person.new_record?)
    #keyword_types.left
      = label_tag :keyword_type_id, "Keyword Types"
      = collection_select :keyword,:keyword_type_id, KeywordType.all, :id, :name, {:prompt => "Select All"}
    %br{ :style=>"clear: both;"}
    %form#keywords
      #keywords_left.left
        = label_tag :add_keywords,"Keywords"
        = select_tag :add_keywords,unselected_keyword_options(person),{:multiple => true,:size => 20}
      #keywords_middle.middle
        = link_to image_tag('go.png'),add_keywords_person_path(person), :id=>"add_keywords_link",:class => "post",:data_id => "keywords"
        %br
        %br
        %br
        = link_to image_tag('back.png'),remove_keywords_person_path(person),:id=>"remove_keywords_link",:class => "post",:data_id => "keywords"
      #keywords_right.right
        = label_tag :remove_keywords,"Selected Keywords"
        = select_tag :remove_keywords,selected_keyword_options(person),{:multiple => true,:size => 20}
      %br{ :style=>"clear: both;"}
