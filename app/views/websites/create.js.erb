<% if @website.errors.empty? -%>
  $('#contacts').prepend('<%= escape_javascript(render(:partial => "contacts/contact", :locals => {:contact => @website})) %>');
  $("#new_website")[0].reset();
  $("#new_contact").hide();
  $('.person_contact_close').css("display","none");
  $('#contact_hidden_tab').attr('mode','show');
  $('.person_contact_toggle_button').css("display","");
  $('#<%= dom_id(@website) %>').effect('slide', {direction:'right'});
<% end -%>