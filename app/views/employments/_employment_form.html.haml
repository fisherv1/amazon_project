      %input.disabled.suspender_container{:disabled=>true, :id=> @employment.new_record? ? "suspender_container_0" : "suspender_container_" + "#{@employment.id}", :value=>(!@employment.new_record? && !@employment.emp_suspender.nil?) ? @employment.emp_suspender.name : ""}
