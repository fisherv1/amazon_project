-# The options to edit or add an employment
.form_line
  .field_25
    =employment.label :organisation_id, "Organisation ID"
    =employment.text_field :organisation_id, :class=>"find_organisation_field", :employment_id=> @employment.new_record? ? 0 : @employment.id
  .field_50
    =employment.label :organisation_id, "Organisation Name"
    %input.disabled.organisation_name_container{:id=>@employment.new_record? ? 0 : @employment.id, :disabled=>true, :value=>@employment.new_record? ? "" : @organisation.full_name}

  .field_25
    =employment.label :id, "Employment ID"
    =employment.text_field :id, :disabled=>true, :class=>"disabled"
  %br.clear
.form_line
  .field_25
    =employment.label :staff_reference, "Reference Number"
    =employment.text_field :staff_reference
  .field_25
    =employment.label :department, "Department"
    =employment.text_field :department
  .field_25
    =employment.label :section, "Section"
    =employment.text_field :section
  .field_25
    =employment.label :pay_cost_centre, "Cost Centre"
    =employment.text_field :pay_cost_centre
  %br.clear

.form_line
  .field_full.center Position

.form_line
  .field_25
    =employment.label :position_name, "Name"
    =employment.text_field :position_name
  .field_25
    =employment.label :position_title, "Description"
    =employment.text_field :position_title
  .field_25
    =employment.label :commenced_date, "Commenced Date"
    =employment.text_field :commenced_date, :class=>"datepick", :value=>@employment.commenced_date.to_s
  .field_25
    =employment.label :term_end_date, "Term End Date"
    =employment.text_field :term_end_date, :class=>"datepick", :value=>@employment.term_end_date.to_s
  %br.clear
.form_line
  .field_25
    =employment.label :position_classification, "Classification"
    =employment.text_field :position_classification
  .field_25
    =employment.label :position_type, "Position Type"
    =employment.text_field :position_type
  .field_25
    =employment.label :award_agreement, "Award Agreement"
    =employment.text_field :award_agreement
  .field_25
    =employment.label :award_other, "Award Othhers"
    =employment.text_field :award_other
  %br.clear
.form_line
  .field_25
    =employment.label :hired_by, "Hired By"
    =employment.text_field :hired_by, :class=>"find_person_field", :update=>"recruiter_container", :employment_id=> @employment.new_record? ? 0 : @employment.id
  .field_25
    =employment.label :hired_by, "Recruiter"
    %input.disabled.recruiter_container{:disabled=>true, :id=> @employment.new_record? ? "recruiter_container_0" : "recruiter_container_" + "#{@employment.id}", :value=>(!@employment.new_record? && !@employment.emp_recruiter.nil?) ? @employment.emp_recruiter.name : ""}
  .field_25
    =employment.label :report_to, "Report To"
    =employment.text_field :report_to, :class=>"find_person_field", :update=>"supervisor_container", :employment_id=> @employment.new_record? ? 0 : @employment.id
  .field_25
    =employment.label :report_to, "Supervisor"
    %input.disabled.supervisor_container{:disabled=>true, :id=> @employment.new_record? ? "supervisor_container_0" : "supervisor_container_" + "#{@employment.id}", :value=>(!@employment.new_record? && !@employment.emp_supervisor.nil?) ? @employment.emp_supervisor.name : ""}
  %br.clear
.form_line
  .field_25
    =employment.label :position_status, "Position Status"
    =employment.text_field :position_status
  .field_75
    =employment.label :duties_resposibilities, "Duties and Responsibilities"
    =employment.text_field :duties_resposibilities
  %br.clear


.form_line
  .field_full.center Payment


.form_line
  .field_25
    =employment.label :weekly_nominal_hours, "Nominal Hours"
    =employment.text_field :weekly_nominal_hours, :class=>"calculate_field", :employment_id =>@employment.new_record? ? "0" : @employment.id, :value=>@employment.new_record? ? "0" : @employment.weekly_nominal_hours, :id=>@employment.new_record? ? "hour_0" : "hour_" + "#{@employment.id}"
  .field_25
    =employment.label :hourly_rate, "Hourly Rate"
    =employment.text_field :hourly_rate, :class=>"calculate_field", :employment_id =>@employment.new_record? ? "0" : @employment.id, :value=>@employment.new_record? ? "0" : @employment.hourly_rate, :id=>@employment.new_record? ? "rate_0" : "rate_"+ "#{@employment.id}"
  .field_25
    =employment.label :annual_base_salary, "Annual Base Salary"
    =employment.text_field :annual_base_salary, :disabled=>true, :value=>@employment.new_record? ? number_to_currency(0) : number_to_currency(@employment.annual_base_salary), :class=>"disabled", :id=>@employment.new_record? ? "salary_0" : "salary_"+ "#{@employment.id}"
  .field_25
    =employment.label :plus_package, "Package Plus"
    =employment.text_field :plus_package
  %br.clear
