-# The form to edit an employment
-form_for @employment, :index => @employment.id, :html => {:class => 'ajax_form'} do |employment|
  %div
    .header_container
      .title
        %h1 Edit Employment
      .options
        = link_to image_tag('close_icon.png'), employment_path(@employment), :class => 'get', :id => 'employment_edit_close_button', :title=>"Close"
      %br{ :style=>"clear: both;"}
      = render :partial => '/employments/employment_form', :locals => { :employment => employment }
      = submit_tag 'Submit'
