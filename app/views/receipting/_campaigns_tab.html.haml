.full_container
  %input.hidden{:id => "campaign_mode", :mode => "show"}

  #add_new_campaign
    = render :partial => "receipting/new_campaign"

  #existing_campaigns
    = render :partial => "receipting/existing_campaigns"

  #edit_campaign{:style => "display:none;margin-top:10px;float:left;"}
    .tab_looking_left
    .tab_looking_icon
      = image_tag('edit_icon.png')
      Maintenance
    .tab_looking_right

    %div.tab_close
      .tab_looking_left
      .tab_looking_icon
        = link_to_function image_tag('/images/Icons/System/close.png'), :field => "campaign", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_campaign", :toggle_id_name1 => "add_new_campaign"
      .tab_looking_right
        .options

    .full_container
      #edit_campaign_form

