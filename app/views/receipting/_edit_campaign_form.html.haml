%script{:type => "text/javascript"}
  :plain
    $(function() {
      $('.edit_campaign_required_field').keyup(function() {
          if($('#edit_campaign_name').val() == '' || $('#edit_campaign_start_date').val() == '') {
              $('#edit_campaign_submit').attr('disabled', true);
          } else {
              $('#edit_campaign_submit').removeAttr('disabled');
          }
      });
    });

    $('.startdatepick').datepicker({
        showOn: 'button',
        buttonImage: '/images/Icons/System/calendar.png',
        buttonImageOnly: true,
        dateFormat: 'dd-mm-yy',
        altFormat: 'mm-dd-yy',
        changeMonth: true,
        changeYear: true,
        yearRange: '-200:+20',
        beforeShow: function(){
            var arr_dateText = $("#"+$(this).attr("end_date")).val().split("-");
            day = arr_dateText[0];
            month = arr_dateText[1];
            year = arr_dateText[2];
            if(year!=undefined){
                $(this).datepicker('option', 'maxDate', new Date(year, month-1, day));
            }
        },
        onSelect: function(){
            $("#"+$(this).attr("end_date")).datepicker('enable');
        },
        onClose: function(){
            $('.startdatepick').change();

        }
    });

    $('.enddatepick').datepicker({
        showOn: 'button',
        buttonImage: '/images/Icons/System/calendar.png',
        buttonImageOnly: true,
        dateFormat: 'dd-mm-yy',
        altFormat: 'mm-dd-yy',
        changeMonth: true,
        changeYear: true,
        yearRange: '-200:+20',
        beforeShow: function(){
            var arr_dateText = $("#"+$(this).attr("start_date")).val().split("-");
            day = arr_dateText[0];
            month = arr_dateText[1];
            year = arr_dateText[2];
            if(year!=undefined){
                $(this).datepicker('option', 'minDate', new Date(year, month-1, day));
            }
        }
    });

- form_for :campaign, @campaign, :url => { :action => "update_campaign" }, :html => {:class => 'ajax_form'}  do |f|
  %input{:name => "id", :style => "width:0px;height:0px;display:none;", :value => @campaign.id}
  .form_line
    .field_15
      = f.label :long_name, "* Name", :class => "required_field"
      = f.text_field :name, :class => "edit_campaign_required_field", :id => "edit_campaign_name", :disabled => true
    .field_30
      = f.label :description, "Description"
      = f.text_field :description, :disabled => @campaign.status == false
  .form_line
    .field_15
      = f.label :target_amount, "Target Amount"
      = f.text_field :target_amount, :disabled => @campaign.status == false
  .form_line
    .field_15
      = f.label :start_date, "* Start Date"
      %input{:name => "start_date", :style => "width:150px;", :id => "edit_campaign_start_date", :class => "startdatepick edit_campaign_required_field", :end_date => "edit_campaign_end_date", :value => @campaign.start_date, :disabled => @campaign.status == false}
    .field_15
      = f.label :end_date, "End Date"
      %input{:name => "end_date", :style => "width:150px;", :id => "edit_campaign_end_date", :class => "enddatepick", :start_date => "edit_campaign_start_date", :value => @campaign.end_date, :disabled => @campaign.status == false}
  .form_line
    .field_30
      = f.label :remarks, "Remarks"
      = f.text_field :remarks, :disabled => @campaign.status == false
    .field_10
      = f.label :status, "Active"
      = f.check_box :status, :class => "checkbox_style"
  .form_line
    .field_100{:style => "float:right;"}
      -#%div{:style => "display:inline;float:right;height:100%;"}
        = link_to "Remove", {:controller => "receipting", :action => "destroy_campaign", :id => @campaign.id}, {:class => 'delete alt_option', :error_message_field => "campaign"} unless @campaign.status == false
      %div{:style => "display:inline;float:right;height:100%;"}
        = submit_tag "Update", :disabled => false, :id => "edit_campaign_submit"
        - unless @campaign.status == false
          %button{:type => "button", :style => "", :id => "copy_campaign", :campaign => "#{@campaign.id}"}
            Save As

#campaign_save_form{:style => "display:none;"}