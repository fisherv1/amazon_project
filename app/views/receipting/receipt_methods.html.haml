#header
  #page_title
    %h1 Receipt Methods
  #lol


%br.clear

#receipt_methods_page
  .full_container
    %input.hidden{:id => "receipt_method_mode", :mode => "show"}

    #add_new_receipt_method
      = render :partial => "receipt_methods/new_receipt_method"

    #existing_receipt_methods
      = render :partial => "receipt_methods/existing_receipt_methods"

    #edit_receipt_method{:style => "display:none;margin-top:10px;float:left;"}
      .tab_looking_left
      .tab_looking_icon
        = image_tag('edit_icon.png')
        Maintenance
      .tab_looking_right

      %div.tab_close
        .tab_looking_left
        .tab_looking_icon
          = link_to_function image_tag('/images/Icons/System/close.png'), :field => "receipt_method", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_receipt_method", :toggle_id_name1 => "add_new_receipt_method"
        .tab_looking_right
          .options

      .full_container
        #edit_receipt_method_form

