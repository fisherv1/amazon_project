-#MasterDocs Tab
.info_container
  .header_container
    .title
      %h3 MasterDocs
    .options
      = link_to_function image_tag('add_icon.png'), :id=>"add_masterdoc", :class=>"person_master_doc_toggle_button", :toggle_id_name => "new_master_doc"  if (!person.nil? && !person.new_record?)
      = image_tag('help_icon.png')
    %br.clear

  =# Initially hidden new masterdoc form
  -form_for([@person,@masterdoc], :html => {:style => "display:none", :class => 'ajax_form'}) do |form|
    %fieldset
      .options{:style => "float:right"}
        = link_to_function image_tag('close_icon.png'), :class => "clear_form person_master_doc_toggle_button", :toggle_id_name => "new_master_doc"
      %h3 New Document
      = render :partial => '/master_docs/master_doc_form', :locals => { :form => form }
      = submit_tag 'Submit'

  #masterdocs
    =# Render the person's addresses
    = render :partial => '/master_docs/master_doc', :collection => person.master_docs