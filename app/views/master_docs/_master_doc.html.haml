-# Displays An Address
-div_for(master_doc, :class => 'info_container') do
  .header_container
    .title
      %h3= "#{master_doc.master_doc_type.name}"
    .options{:class => 'person_master_doc_edit_delete'}
      = link_to image_tag('edit_icon.png'), edit_master_doc_path(master_doc), :class => 'get edit_master_doc', :id => 'master_doc_edit_button', :master_doc_id => master_doc.id
      = link_to image_tag('delete_icon.png'), master_doc_path(master_doc), :class => 'delete delete_master_doc', :id => 'master_doc_delete_button', :master_doc_id => master_doc.id
    %br.clear
  .display_container
    = format_masterdoc(master_doc)