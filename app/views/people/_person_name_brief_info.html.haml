- if @person.id.nil?
  %h1{:style=>'visibility:hidden'} Hidden
-else
  %h1= h "#{@person.name}"
.form_line{:style=>"width: 193px; margin-top: 10px;"}
  %div#customerid{:style=>"width:193px;"}
    = label_tag :customerid, "Custom ID",:style=>"font-size: 12px;"
    %div.display_field_bg{:style=>"margin-left: 4px;"}
      = @person.custom_id
.form_line{:style=>"width:193px;margin-top:2px;"}
  %div#onrecordsince{:style=>"width:193px;"}
    = label_tag :on_record_since, "On Record Since",:style=>"font-size:12px;display:inline;"
    - status = @person.status ? "active" : "inactive"
    = link_to_function "#{status}",:class=> "ajax_call", :method => "GET", :url => "/people/change_status", :param1 => @person.id, :light_box => "true"
    %div.display_field_bg{:style=>"margin-left: 4px;"}
      = @person.onrecord_since.to_s
%br