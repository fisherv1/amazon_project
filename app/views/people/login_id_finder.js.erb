<%y = Array.new%>
<%y = @person.login_accounts%>


<% if @login_account.new_record? %>
  <% if @person.new_record? %>
    $('#login_name_container_0').html("Invalid ID")
  <%else%>
    <% if y.blank? %>
      $('#login_name_container_0').html("<%=escape_javascript("#{@person.name}")%>")
    <%else%>

      $('#person_check').dialog( {
      modal: true,
      draggable: true,
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });
      $('#person_check').dialog('open');


      $('#login_name_container_0').html("<%=escape_javascript("#{@person.name}")%>")
    <%end%>
  <%end%>

<%else%>

  <% if @person.new_record? %>
    $('#login_name_container_'+'<%=escape_javascript("#{@login_account.id}")%>').html("Invalid ID")
  <%else%>
    <% if y.blank? %>
    <%else%>

      $('#person_check').dialog( {
      modal: true,
      resizable: true,
      draggable: true,
      position: 'top',
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });
      $('#person_check').dialog('open');


      $('#login_name_container_'+'<%=escape_javascript("#{@login_account.id}")%>').html("<%=escape_javascript("#{@person.name}")%>")
    <%end%>
  <%end%>

<%end%>


