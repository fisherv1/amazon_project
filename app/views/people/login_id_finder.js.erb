<%y = Array.new%>
<%y = @person.login_accounts%>


<% if @login_account.new_record? %>
  <% if @person.new_record? %>
    $('#login_name_container_0').html("Invalid ID")
    $('.user_email_new').val('')
          $('#user_group_person_check').dialog( {
         modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 'auto',
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });
      $('#user_group_person_check').dialog( 'option', 'title', 'ERROR');
     $('#user_group_person_check').parent().find("a").css("display","none");
     $("#user_group_person_check").parent().css('background-color','#D1DDE6');
    $("#user_group_person_check").css('background-color','#D1DDE6');
      $('#user_group_person_check').dialog('open');

  <%else%>
    <% if y.blank? %>
      $('#login_name_container_0').html("<%=escape_javascript("#{@person.name}")%>")
      $('.user_email_new').val("<%=escape_javascript("#{@primary_email}")%>")
        $('#user_group_wrong_login_id').dialog( {
       modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 'auto',
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });
      $('#user_group_wrong_login_id').dialog('open');

    <%else%>

      $('#person_check').dialog( {
          modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 'auto',
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });
       $('#person_check').dialog( 'option', 'title', 'ERROR');
     $('#person_check').parent().find("a").css("display","none");
     $("#person_check").parent().css('background-color','#D1DDE6');
    $("#person_check").css('background-color','#D1DDE6');
      $('#person_check').dialog('open');


      $('#login_name_container_0').html("<%=escape_javascript("#{@person.name}")%>")
      $('.user_email_new').val('')
    <%end%>
  <%end%>

<%else%>

  <% if @person.new_record? %>
    $('#login_name_container_'+'<%=escape_javascript("#{@login_account.id}")%>').html("Invalid ID")
  <%else%>
    <% if y.blank? %>
    <%else%>

      $('#person_check').dialog( {
      modal: true,
      resizable: true,
      draggable: true,
      position: 'top',
      buttons: {
      Ok: function() {
      $(this).dialog('close');
      }
      }
      });

       $('#person_check').dialog( 'option', 'title', 'Error');
     $('#person_check').parent().find("a").css("display","none");
     $("#person_check").parent().css('background-color','#D1DDE6');
    $("#person_check").css('background-color','#D1DDE6');
      $('#person_check').dialog('open');


      $('#login_name_container_'+'<%=escape_javascript("#{@login_account.id}")%>').html("<%=escape_javascript("#{@person.name}")%>")
    <%end%>
  <%end%>

<%end%>


