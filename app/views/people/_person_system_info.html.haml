%div.container
  %div.toggle_div{:toggle_id_name => "receipting_details", :style => "cursor: pointer;"}
    .options
      = image_tag('Icons/System/collapse.png')
    .right{:style => "margin:3px 3px 0 0;"}
      = link_to "Transaction", :controller => "receipting", :action => "personal_deposit"
    %h1 Receipting

  %div#receipting_details.left{:style => "width:100%;"}
    .container
      %h2 Last Transaction
      .form_line
        .field_31
          %label Date
          .display_field_bg
            #{Date.today.to_s}

        .field_31
          %label Amount
          .display_field_bg
            #{number_to_currency(8000)}

        .field_31
          %label Status
          .display_field_bg


    .container
      %h2 YTD Total
      .form_line
        .field_31
          %label NO.Transactions
          .display_field_bg
            = 100

        .field_31
          %label Amount
          .display_field_bg
            #{number_to_currency(80000)}

        .field_31
          %label Average Transaction
          .display_field_bg
            #{number_to_currency(8000)}
            




