-#pass value :people => @p, :current_operation => @current_operation,:active_tab => @active_tab,:active_sub_tab => @active_sub_tab
%div

  .tab_switch{:style => "margin-left:15px;"}
    .tab_switch_left.active.left{:field =>"grid_show_page"}
    .container_icon.active.left{:align => 'center'}
      = link_to_function "<h1>grid</h1>",:class=>"tab_switch_button page_initial hidden", :url => "/people/show_album",:method => "GET", :render_page => "/people/album_tab", :field => "grid_show_page",:params1 => @person.id, :type => "Person"
      = link_to_function "<h1>grid</h1>", :class=>"tab_switch_with_page_initial", :field => "grid_show_page"
    .tab_switch_right.active.left{:field =>"grid_show_page"}


    .tab_switch_left.left{:field =>"album_show_page"}
    .container_icon.left{:align => 'center'}
      = link_to_function "<h1>album</h1>",:class=>"tab_switch_button page_initial hidden", :url => "/grids/show_list_grid",:method => "GET", :render_page => "/tests/album_container", :field => "album_show_page",:type => "Person"
      = link_to_function "<h1>album</h1>", :class=>"tab_switch_with_page_initial", :field => "album_show_page"
    .tab_switch_right{:field =>"album_show_page"}



  .container
    #grid_show_page.tab_switch_container.active
      %table#search_list_results{:current_operation => "#{current_operation}",:active_tab => "#{active_tab}",:active_sub_tab => "#{active_sub_tab}"}
    #album_show_page.tab_switch_container
  
%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    $("#search_list_results").flexigrid(
    {
    url: '/grids/show_list_grid',
    dataType: 'json',
    colModel : [
    {display: 'ID', name : 'id', width : 40, sortable : true, align: 'left'},
    {display: 'First Name', name : 'first_name', width : 55, sortable : true, align: 'left'},
    {display: 'Family Name', name : 'family_name', width : 165, sortable : true, align: 'left'},

    {display: 'Phone', name : 'primary_phone_num', width : 150, sortable : true, align: 'left'},
    {display: 'Email', name : 'primary_email_address', width : 140, sortable : true, align: 'left'}

    ],
    searchitems : [
    {display: 'First Name', name : 'first_name'},
    {display: 'Family Name', name : 'family_name'},

    {display: 'Phone', name : 'primary_phone_num'},
    {display: 'Email', name : 'primary_email_address'}

    ],
    sortname: "id",
    sortorder: "asc",
    usepager: true,
    title: 'People List',
    useRp:true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });