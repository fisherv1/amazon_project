-#The container for a Relationship Type
-#SQL Query Optimized
%div{:id => type.gsub(/ /,'').underscore, :class=>"header_container"}
  %div
    .title
      -relationshiptype = RelationshipType.find_by_name(type)
      %h2{:class=>("red" if !relationshiptype.nil? and relationshiptype.to_be_removed == true)}
        =type
    %br{ :style=>"clear: both;"}
  - if type == "Siblings" || type == "Children"
    -# Displays A Relationship
      %div.id_container
        = relations.id
      %div.name_container
        = relations.name
  %br{ :style => "clear:both;"}
  - else
    = render :partial => 'people/person_relationship_show', :collection => relations