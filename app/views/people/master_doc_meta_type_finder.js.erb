<% if @master_doc_meta_types.size > 0 %>
  <%  result = String.new %>
  <% for mdmt in @master_doc_meta_types %>
    <% result += "<option value='#{mdmt.id}'>#{mdmt.name}</option>" %>
  <% end %>

  <% if @masterdoc.new_record? %>
    $("#master_doc_meta_type_id").html('<%=escape_javascript("#{result}")%>')
    $("#master_doc_meta_type_id").change()
  <% else %>
    $("#master_doc_meta_type_id_<%=escape_javascript("#{@masterdoc.id}")%>").html('<%=escape_javascript("#{result}")%>')
    $("#master_doc_meta_type_id_<%=escape_javascript("#{@masterdoc.id}")%>").change()
  <% end %>

<% else %>

  <% if @masterdoc.new_record? %>
    $("#master_doc_meta_type_id").html('<option value=""></option>')
    $("#master_doc_meta_type_id").change()
  <% else %>
    $("#master_doc_meta_type_id_<%=escape_javascript("#{@masterdoc.id}")%>").html('<option value=""></option>')
    $("#master_doc_meta_type_id_<%=escape_javascript("#{@masterdoc.id}")%>").change()
  <% end %>

<% end -%>