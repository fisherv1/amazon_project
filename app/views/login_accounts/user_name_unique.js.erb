      modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 'auto',

    buttons: {

    OK: function(){

    $(this).dialog('close');
    }
    }
    });
     $('#flash_message').dialog( 'option', 'title', 'ERROR');
