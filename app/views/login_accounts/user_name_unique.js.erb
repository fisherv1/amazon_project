<% if @login_account.new_record? %>
  <%if @error_flag_unique %>
   
    $('#user_name_container_0').html("UserName already taken")
    $('#no_username').show();
    $('#yes_username').hide();
    $("#flash_message").html("<%=escape_javascript(flash.now[:error])%>");
    $("#flash_message").dialog( {
    modal:true,
    position: 'top',
    buttons: {

    OK: function(){

    $(this).dialog('close');
    }
    }
    });

    $('#flash_message').dialog('open');
  <%elsif @error_flag_length %>
    $('#user_name_container_0').html("UserName not taken")
    $('#no_username').show();
    $('#yes_username').hide();

    $("#flash_message").html("<%=escape_javascript(flash.now[:error])%>");
    $("#flash_message").dialog( {
    modal:true,
    position: 'top',
    buttons: {

    OK: function(){

    $(this).dialog('close');
    }
    }
    });

    $('#flash_message').dialog('open');
  <%else%>
    $('#user_name_container_0').html("Username not taken")
    $('#no_username').hide();
    $('#yes_username').show();

  <%end%>

