<% if @to_do_list.errors.empty? -%>
  $('#new_to_dos').append('<%= escape_javascript(render(:partial => "/to_do_lists/to_do", :locals => {:to_do => @to_do_list})) %>');
  $('#<%= dom_id(@to_do_list) %>').effect('slide', {direction:'right'});
  $('#new_to_do_dialog').dialog('close');
<%- else %>
  $("#flash_message").html("<%= escape_javascript(flash[:error]) %>");
  $('#flash_message').dialog( {
  modal: true,
  resizable: false,
  draggable: true,
  position: 'top',
  buttons: {
  Ok: function() {
  $(this).dialog('close');
  }
  }
  });
  $('#flash_message').dialog('option', 'title', 'Error');
  $('#flash_message').dialog('open');
<% end -%>


