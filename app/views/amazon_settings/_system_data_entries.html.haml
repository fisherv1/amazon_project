%div#system_data_entries
  - for setting in @amazon_settings
    - setting_status = setting.status ? "container_active" : "container_inactive"
    - setting_status = "container_remove" if setting.to_be_removed == true
    %div{:class => "#{setting_status} toggle_options", :system_data_id => setting.id, :style => "width:30%;", :field => "system_data" }
      .options{:style => "display:none;"}
        -if setting.to_be_removed == false
          = link_to_function image_tag('edit_icon.png'), :class => 'edit_option', :system_data_id => setting.id, :field => "system_data", :id => "edit_current_system_data_entry", :title=>"Edit"
          = link_to_function image_tag('delete_icon.png'), :class => 'delete_option', :system_data_id => setting.id ,:error_message_field => "System Data",:field => "system_data", :id => "delete_system_data_entry", :title=>"Remove"
        -else
          = link_to image_tag('icon_holder.png'), retrieve_amazon_setting_path(setting), :class => 'get',:error_message_field => "System Data", :field => "system_data", :id => 'system_data_retrieve_button', :system_data_id => setting.id, :title=>"Retrieve"
      .title
        %h3= h "#{setting.name}"