%div#top
  .field_33
    = label  @role,:role_type_id, "Role Types"
    = collection_select :role,:role_type_id, RoleType.all, :id, :name, {:include_blank => true}, {:class => "show_role"}
  %br{ :style=>"clear: both;"}
  .field_33
    = label @role,:role_id, "Role"
    -if @role.new_record?
      %select.add_role{:id => "role_id"}
        %option
    -else
      %select.add_role{:id => "role_id", :name => "role[id]"}
        %option{:value => @role.id}
          = @role.name
%div#downside
  = render :partial => '/roles/roles_original_form'

  %br{ :style=>"clear: both;"}




