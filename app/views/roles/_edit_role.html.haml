.tab_corner
  .container_corner.profile_tab_left_corner.left
  .container_edit
    .options_left{:style => "margin-right:10px;"}
      = image_tag('edit_icon.png', :class => "edit_icon_right")
    %h3 Edit
  .container_corner.profile_tab_right_corner.left
.container#edit_role
  %div
    .options
      = link_to_function image_tag('close_icon.png'), :class => "edit_close_flag close_option", :id => "edit_role_form",  :field => "role", :flag_name => "role", :title=>"Close"
   
    -form_for @role, :url => {:controller => "roles", :action=> "update"}, :html => {:class => 'ajax_form'} do |role|
      .form_line{:style => "float:none;"}
        .field_20
          = role.label :name, 'Role Name'
          = role.text_field :name, :disabled=>@role.role_status == false
        .field_25
          = role.label :remarks, 'Remark'
          = role.text_field :remarks, :disabled=>@role.role_status == false
        -#.field_10
          = role.label :role_status, 'Status'
          = role.radio_button :role_status, true, :checked => true, :style => "width:10%;"
          %label.inline Active
        .field_10
          = role.label :role_status, 'Active'
          = role.check_box :role_status, :class => "checkbox_style"
          = role.text_field :role_type_id, :id => "role_type_id_field", :class => "hidden"
    
      = submit_tag 'Submit'

        