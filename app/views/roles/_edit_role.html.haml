.full_container#edit_role
  %div
    .options
      -#= link_to_function image_tag('close_icon.png'), :class => "edit_close_flag", :id => "edit_role_form",  :field => "role", :flag_name => "role", :title=>"Close"
   
    -form_for @role, :url => {:controller => "roles", :action=> "update"}, :html => {:class => 'ajax_form'} do |role|
      .form_line{:style => "float:none;"}
        .field_33
          = role.label :name, "<span class='asterisk'>*</span>Role Name"
          = role.text_field :name,:id=>"role_edit_name",:class=>'mandantory_field',:mandantory_field1=>"role_edit_name",:submit_button_id=>"role_edit_submit", :disabled=>@role.role_status == false
        .field_33
          = role.label :remarks, 'Remark'
          = role.text_field :remarks, :disabled=>@role.role_status == false
        .field_5
          = role.label :role_status, 'Active'
          = role.check_box :role_status, :class => "checkbox_style"
          = role.text_field :role_type_id, :id => "role_type_id_field", :class => "hidden"
        .field_20
          %label &nbsp
          = submit_tag 'Submit', :style => 'display:inline;float:right;',:id=>"role_edit_submit"

        