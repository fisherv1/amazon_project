<% unless @role_type.nil? -%>
  <% role = String.new %>
  <% role += "<option></option>" %>
  <% for r in @role_type -%>
    <% role += "<option value= '#{r.id}'>#{r.name}</option>" %>
  <% end -%>
 
  $("#role_condition_role_type_id").html('<%=escape_javascript("#{role}")%>');
$('.role_condition_show_role').attr('disabled', false);
$("#role_condition_existing_role").html('');
$('#role_condition_edit_role_container').html('');
$('#condition_role_mode').attr('mode', 'show');
<% end -%>