<%  unless flash[:error].nil?%>
  $('#flash_message').html("<%=escape_javascript(flash[:error])%>");
  $('#flash_message').dialog({
  modal:true,
    resizable: false,
  <%#*position: 'top',%>
  buttons:{
  OK: function(){$(this).dialog('close');}
  }
  });
  $('#flash_message').dialog('open');
<%else%>

  $('#existing_role').append('<%=escape_javascript(render(:partial => "/roles/new_created_role", :locals =>{:i => @role })) %>');
  $('#<%= dom_id(@role) %>').show('slide');
  $("#role_name").val('');
  $("#role_remarks").val('');
  $('.close_flag').click('');
  $('#role_new_submit').attr('disabled',true);
<%end%>