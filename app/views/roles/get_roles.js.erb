<% unless @role.nil? %>
  <% role = String.new %>
  <% for r in @role %>

    <% role += "<option value='#{r.id}'>#{r.name}</option>" %>
    <% if @person_role.new_record? %>
      $("#person_role_role_id").html('<%=escape_javascript("#{role}")%>')
    <%else%>
      $("#person_role_"+"<%=escape_javascript("#{@person_role.id}")%>"+"_role_id").html('<%=escape_javascript("#{role}")%>')
    <%end%>
  <%end%>
<% else %>


  <% if @person_role.new_record? %>
    $("#person_role_role_id").html('<option value="1"></option>')
  <%else%>
    $("#person_role_"+"<%=escape_javascript("#{@person_role.id}")%>"+"_role_id").html('<option value="1"></option>')
  <%end%>


<% end -%>