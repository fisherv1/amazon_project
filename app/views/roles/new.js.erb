<%if @role.new_record? %>

  $("#down").html(" <%= escape_javascript(render(:partial => 'role_new_form', :locals => { :role => @role })) %>");
<% else %>
$("#kk").html(" <%= escape_javascript(render(:partial => 'role_main_form')) %>");
  $("#role_description").html('<%=  escape_javascript("#{@role.description}")%>');
    $("#role_condition").html('<%=  escape_javascript(render(:partial => '/role_conditions/role_condition_form'))%>');
    $("#role_condition_role_id").val('<%=  escape_javascript("#{@role.id}")%>');

    

