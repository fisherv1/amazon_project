.full_container
  %input.hidden{:id => "language_mode", :mode => "show"}

  #add_new_language
    = render :partial => "languages/new_language"

  #existing_languages
    = render :partial => "languages/existing_languages"

  #edit_language{:style => "display:none;margin-top:10px;float:left;"}
    .tab_switch_left.active.left{:style => "margin-left:10px;"}
    .container_icon.active.left{:align => 'center'}
      = image_tag('edit_icon.png')
      Edit
    .tab_switch_right.active.left
    .full_container
      .options
        = link_to_function image_tag('close_icon.png'), :field => "language", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_language", :toggle_id_name1 => "add_new_language"
      #edit_language_form