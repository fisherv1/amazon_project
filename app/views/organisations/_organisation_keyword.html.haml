#keywords
  - if !@organisation.keywords.blank?
    .title
      %h1 Keyword Details
    %br.clear
    - @organisation.keywords.each do |organisation_keyword|
      -div_for(organisation_keyword, :class => 'header_container') do
        %div
          .title
            %h2{:class=>("red" if organisation_keyword.keyword_type.to_be_removed == true)}= organisation_keyword.keyword_type.name unless (organisation_keyword.blank? || organisation_keyword.keyword_type.nil?)
        %div{:style => "float:right;"}
          = format_keyword(organisation_keyword)
  - else
    .no_record
      %h1 No Record