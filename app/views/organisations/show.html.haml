#left
  .header
    .title
      = render :partial => "menu", :locals => { :organisation => @organisation }
    %br.clear
  %div.info_container
    .form_line
      .field_20{:style => 'float:left;'}
        = label_tag 'organisation_id', 'System ID', :style => 'clear:both'
        - form_tag(:controller => "organisations", :action => "show", :id => "") do
          = text_field_tag 'organisation_id', @organisation.id, {:readonly=> false, :onblur => 'this.form.submit()',:id => 'system_id_tag'}

      = render :partial => "lists_menu", :locals => {:organisation => @organisation, :p => @p }
    %br.clear
      
  %div.info_container
    %div#imageshow{:style => "float:left;"}
      -if @organisation.image.nil?
        = image_tag 'no_photo.jpeg', :class => "small"
      -else
        = image_tag(image_path(@organisation.image.id), :class => "small")
    
     
    %div#idline
      - if @organisation.id.nil?
        %h3{:style=>'visibility:hidden'} Hidden
        
      -else
      
        %h3= h "#{@organisation.name}"
        
      .form_line
        .field_33 
          = label_tag 'custom_id', 'Custom ID'
          = text_field_tag 'custom_id', @organisation.custom_id, {:readonly => true}
        .field_33
          = label_tag 'onrecord_since', 'On Record Since'
          = text_field_tag 'onrecord_since', @organisation.onrecord_since, {:readonly => true}
        %br.clear


    -#%div#more_name_details{:style => 'display:none'}
      .form_line
        .field_20
          = label_tag 'title', 'Title'
          = text_field_tag 'title', @organisation.title_id, {:readonly => true}
        .field_40
          = label_tag 'first_name', 'First Names'
          = text_field_tag 'first_name', @organisation.first_name, {:readonly => true}
        .field_40
          = label_tag 'family_name', 'Family Name'
          = text_field_tag 'family_name', @organisation.family_name, {:readonly => true}
        %br.clear
      .form_line
        .field_20
          = label_tag 'second_title', 'Second Title'
          = text_field_tag 'second_title', @organisation.second_title_name, {:readonly => true}
        .field_40
          = label_tag 'middle_name', 'Middle Name'
          = text_field_tag 'middle_name', @organisation.middle_name, {:readonly => true}
        .field_40
          = label_tag 'maiden_name', 'Maiden Name'
          = text_field_tag 'middle_name', @organisation.maiden_name, {:readonly => true}
        %br.clear
      .form_line
        .field_20
          = label_tag 'initials', 'Initials'
          = text_field_tag 'initials', @organisation.initials, {:readonly => true}
        .field_40
          = label_tag 'post_title', 'Post Name'
          = text_field_tag 'post_title', @organisation.post_title, {:readonly => true}
        .field_40
          = label_tag 'preferred_name', 'Preferred Name'
          = text_field_tag 'preferred_name', @organisation.preferred_name, {:readonly => true}
        %br.clear
    -#%span.details
      = link_to_function 'more details', :class => 'toggle_more', :toggle_more_id => 'more_name_details', :alt_text => 'hide details'

  %div.info_container
    %h3 Contacts
    %div.info_container
      Phone &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = @primary_phone.nil? ? "None assigned": @primary_phone.number
    %div.info_container
      Email &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = @primary_email.nil? ? "None assigned": @primary_email.value
   


  %div.info_container
    %h3
      = @primary_address.nil? ? "Address" : "#{@primary_address.address_type_name} Address"
    .primary_address_and_employment
      = format_address(@primary_address) unless @primary_address.nil?


  %div.info_container
    %h3 Notes
    %div.info_container
      %div{:style => "float:left;"}
        = @organisation.notes.blank? ? "No Notes": @organisation.notes.first.id
        = @organisation.notes.first.note_type.name unless @organisation.notes.blank?

      %div{:style => "float:right;"}
        = show_date(@organisation.notes.first.created_at)unless @organisation.notes.blank?
        \-
        = @organisation.notes.first.label unless @organisation.notes.blank?
        = @organisation.notes.first.short_description unless @organisation.notes.blank?
      %br.clear
    %div.info_container
      %div{:style => "float:left;"}
        = @organisation.notes.second.blank? ? "No Notes": @organisation.notes.second.id
        = @organisation.notes.second.note_type.name unless @organisation.notes.second.blank?

      %div{:style => "float:right;"}
        = show_date(@organisation.notes.second.created_at)unless @organisation.notes.second.blank?
        \-
        = @organisation.notes.second.label unless @organisation.notes.second.blank?
        = @organisation.notes.second.short_description unless @organisation.notes.second.blank?
      %br.clear
  

      
  %div.info_container
    %h3 Employment
    .primary_address_and_employment
      = format_employment(@primary_employment) unless @primary_employment.nil?
        


