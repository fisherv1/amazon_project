- if @organisation.id.nil?
  %h1{:style=>'visibility:hidden'} Hidden
-else
  %h1
    =@organisation.to_be_removed ? "<span class='red'>#{@organisation.full_name}</span>" : "#{@organisation.full_name}"

.form_line{:style=>"width: 193px; margin-top: 10px;"}
  = label_tag 'custom_id', 'Custom ID'
  %div.display_field_bg{:style=>"margin-left: 4px;"}
    =@organisation.custom_id
.form_line{:style=>"width: 200px; margin-top: 2px;"}
  .field_80
    = label_tag 'onrecord_since', 'On Record Since'
    -if @current_user.type == "MemberZone" || @current_user.type == "SuperAdmin"
      - to_be_removed = @organisation.to_be_removed ? "Retrieve" : " Remove"
      = link_to_function "#{to_be_removed}",:class=>"ajax_call",:style => "font-size: 12px;display:inline;",:method =>"DELETE",:url=>"/organisations/"+@organisation.id.to_s,:light_box =>"true"
      - status = @organisation.status ? "active" : "inactive"
      = link_to_function "#{status}",:class=> "ajax_call",:style => "font-size: 12px;display:inline;", :method => "GET", :url => "/organisations/change_status", :param1 => @organisation.id, :light_box => "true"

  %div.display_field_bg{:style=>"margin-left: 4px;"}
    =@organisation.onrecord_since.to_s
%br