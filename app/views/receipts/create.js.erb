<% if @receipt.errors.empty? -%>
<%unless @field =="edit_receipt"%>
$('#add_new_receipt').html('<%= escape_javascript(render(:partial => "/receipts/new_receipt")) %>');
  $('#existing_receipt').html('<%= escape_javascript(render(:partial => "/receipts/existing_receipts")) %>');
  $('#temp_allocation_total_amount').show();
  $("#total_amount_value").html('<%= escape_javascript("#{number_to_currency(@receipt_value)}")%>');
  $('#receipt_mode').attr('mode', 'show');
<%else%>
$('#edit_add_new_receipt').html('<%= escape_javascript(render(:partial => "/receipts/new_receipt")) %>');
  $('#edit_existing_receipts').html('<%= escape_javascript(render(:partial => "/receipts/existing_receipts")) %>');

  $("#edit_temp_allocation_total_amount_value").html('<%= escape_javascript("#{number_to_currency(@receipt_value)}")%>');
$("#edit_receipt_mode").attr('mode', 'show');

  <%end%>



<% else %>
$("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
 $('#flash_message').dialog( {
     modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 600,
  buttons:{
  Ok: function() {
  $(this).dialog('destroy');
  }
  }
  });
 $('#flash_message').dialog( 'option', 'title', 'ERROR');
 $('#flash_message').parent().find("a").css("display","none");
 $("#flash_message").parent().css('background-color','#D1DDE6');
 $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');
<% end -%>
  enable_form_after_submit_finish();