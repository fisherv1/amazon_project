$('#receipt_method_mode').attr('mode', 'show');
$('#edit_receipt_method').css('display','none');
  $("#show_receipt_methods_grid").flexigrid({
  url: '/grids/show_receipt_methods_grid',
  dataType: 'json',
  colModel : [
  {
  display: 'ID',
  name : 'id',
  width : 40,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Name',
  name : 'name',
  width : 70,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Receipt Type',
  name : 'receipt_type',
  width : 60,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Description',
  name : 'description',
  width : 50,
  sortable : true,
  align: 'left'
  },


  {
  display: 'Status',
  name : 'status',
  width : 60,
  sortable : true,
  align: 'left'
  }
  ],
  searchitems : [
  {
  display: 'Name',
  name : 'Name'
  },

  {
  display: 'Receipt Type',
  name : 'Receipt Type'
  },

  {
  display: 'Description',
  name : 'description'
  },

  {
  display: 'Status',
  name : 'status'
  }
  ],
  sortname: "name",
  sortorder: "asc",
  usepager: true,
  title: 'Receipt Methods',
  useRp: true,
  rp: 20,
