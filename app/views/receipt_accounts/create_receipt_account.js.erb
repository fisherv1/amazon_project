<% if @receipt_account.errors.empty? -%>
$('#add_new_receipt_account').html('<%= escape_javascript(render(:partial => "/receipt_accounts/new_receipt_account")) %>');
$('#existing_receipt_accounts').html('<%= escape_javascript(render(:partial => "/receipt_accounts/existing_receipt_accounts")) %>');
$('#receipt_account_mode').attr('mode', 'show');

<% else %>
$("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
 $('#flash_message').dialog( {
      modal: false,
      resizable: false,
      draggable: false,
      height: 'auto',
      width: 600,
  buttons:{
  Ok: function() {
  $(this).dialog('destroy');
  }
  }
  });
 $('#flash_message').dialog( 'option', 'title', 'ERROR');
 $('#flash_message').parent().find("a").css("display","none");
 $("#flash_message").parent().css('background-color','#D1DDE6');
 $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');
<% end -%>
  enable_form_after_submit_finish();