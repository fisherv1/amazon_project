%script{:type => "text/javascript"}
  :plain
    $(function() {
      $('.edit_receipt_account_required_field').keyup(function() {
          if($('#edit_receipt_account_name').val() == '') {
              $('#edit_receipt_account_submit').attr('disabled', true);
          } else {
              $('#edit_receipt_account_submit').removeAttr('disabled');
          }
      });
    });
- form_for :receipt_account, @receipt_account, :url => {:controller => "receipt_accounts", :action => "update_receipt_account" }, :html => {:class => 'ajax_form'}  do |f|
  %input{:name => "id", :style => "width:0px;height:0px;display:none;", :value => @receipt_account.id}
  .form_line
    .field_15
      = f.label :long_name, "* Name", :class => "required_field"
      = f.text_field :name, :class => "edit_receipt_account_required_field", :id => "edit_receipt_account_name", :disabled => true
  .form_line
    .field_30
      = f.label :description, "Description"
      = f.text_field :description
    .field_30
      = f.label :remarks, "Remarks"
      = f.text_field :remarks
  .form_line
    .field_30
      = f.label :receipt_type_id, "Receipt Account Type"
      = f.collection_select(:receipt_account_type_id, ReceiptAccountType.find(:all), :id, :name, {:include_blank => true})
  .form_line
    .field_10
      = f.label :post_to_history, "Post to History"
      = f.check_box :post_to_history, :checked => false, :class => "checkbox_style"
    .field_10
      = f.label :post_to_campaign, "Post to Campaign"
      = f.check_box :post_to_campaign, :checked => false, :class => "checkbox_style"
    .field_10
      = f.label :send_receipt, "Send Receipt"
      = f.check_box :send_receipt, :checked => true, :class => "checkbox_style"
    .field_10
      = f.label :status, "Active"
      = f.check_box :status, :checked => true, :class => "checkbox_style"
  .form_line
    .field_100{:style => "float:right;"}
      %div{:style => "display:inline;float:right;height:100%;"}
        = link_to "Remove", {:controller => "receipt_accounts", :action => "destroy_receipt_account", :id => @receipt_account.id}, {:class => 'delete', :error_message_field => "receipt account", :style => "float:right;text-size:12px;padding-top:4px;padding-left:7px;"}
      %div{:style => "display:inline;float:right;height:100%;"}
        = submit_tag "Submit", :disabled => false, :id => "edit_receipt_account_submit"
        %button{:type => "button", :style => "", :id => "copy_receipt_account", :receipt_account => "#{@receipt_account.id}"}
          Save As

#receipt_account_save_form{:style => "display:none;"}