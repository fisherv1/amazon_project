<% unless flash[:error].nil? %>
$("#flash_message").html("<%= escape_javascript(flash[:error]) %>");
$('#flash_message').dialog( {
    modal: true,
     resizable: false,
    draggable: true,
    <%#*position: 'top',%>
    buttons: {
      Ok: function() {
        $(this).dialog('close');
      }
    }
  });
  $('#flash_message').dialog('option', 'title', 'Error');
$('#flash_message').dialog('open');

<% else %>

$("#tag_type_form").html('');
$('#tag_type_form').dialog('close');
$("#tag_types_<%= escape_javascript("#{@tag_meta_type.id}")%> > ul").append("<%= escape_javascript(render(:partial => '/tag_types/tag_type', :locals => {:tag_type => @tag_type})) %>");
<% end %>
