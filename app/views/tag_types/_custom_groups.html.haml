-for group in @custom_groups.tag_types do
  .container{:id => "group_#{group.id}"}
    = image_tag("/images/closed_accordion.png", :size => "18x14", :style => "float:right;", :id => group.id, :toggle_id_name => "sub_group_#{group.id}", :class => "open_tag_toggle", :level => "2")
    = image_tag("/images/open_accordion.png", :size => "14x18", :style => "float:right;display:none;", :id => group.id, :toggle_id_name => "sub_group_#{group.id}", :class => "close_tag_toggle", :level => "1")
    %div{:class => "toggle_multilevel_options", :level => "1"}
      %div.options{:style => "display:none;"}
        = image_tag("edit_icon.png", :class => "multilevel_edit_option", :level => "1")
        = image_tag("delete_icon.png", :class => "multilevel_delete_option", :level => "1")
      = group.name
      %br.clear
    %div.sub_groups{:style => "display:none;", :id => "sub_group_#{group.id}"}
      .container
        %div
          = link_to_function image_tag("add_icon.png" , :size => "19x18"), :class => "custom_sub_group_add_entry multilevel_new_option", :group_id => group.id, :level => "2", :class => "tag_add_entry_form", :form_id => "sub_group_form_#{group.id}"
          = link_to_function image_tag("close_icon.png", :size => "19x18"), :style => "display:none;float:right;", :group_id => group.id, :level => "2", :class => "tag_close_entry_form multilevel_close_option", :form_id => "sub_group_form_#{group.id}"
          Add Subgroup
        %div{:id => "sub_group_form_#{group.id}", :group_id => group.id, :style => "display:none;"}
          %br.clear
          - form_for GroupType.new, :url => {:controller => "tags", :action => "create_custom_sub_group", :id => group.id}, :html => {:class => "ajax_form"} do |p|
            .form_line{:style => "float:none;"}
              .field_30
                = p.label :name, 'Name'
                = p.text_field :name, {:class => "group_type_name"}
              .field_35
                = p.label :description, 'Description'
                = p.text_field :description, {:class => "group_type_description"}
              .field_30
                = p.label :active
                %label
                  = p.check_box :status, {:class => "group_type_active"}
                = submit_tag 'Submit', :style => 'display:inline;float:right;', :name => 'edit'
      %div{:id => "sub_groups_in_group_#{group.id}"}
        -for sub_group in group.tags do
          .container{:class => "toggle_multilevel_options", :level => "2"}
            %div.options{:style => "display:none;"}
              = image_tag("edit_icon.png" , :class => "multilevel_edit_option", :level => "2" )
              = image_tag("delete_icon.png" , :class => "multilevel_delete_option", :level => "2")
            = sub_group.name