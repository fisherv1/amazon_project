-# locals => {:entity_type, :entity_id}

%input.hidden{:id => "histroy_mode", :mode => "show"}

#transaction_filter
  = render :partial => "transactions/transaction_filter"

#transaction_histroy
  = render :partial => "transactions/transaction_histroy", :locals => {:entity_type => session[:entity_type], :entity_id => session[:entity_id], :start_date => @start_date, :end_date => @end_date}


#view_transaction_histroy{:style => "display:none;margin-top:10px;float:left;width:100%;"}
  .tab_looking_left
  .tab_looking_icon
    = image_tag('edit_icon.png')
    View
  .tab_looking_right

  %div.tab_close
    .tab_looking_left
    .tab_looking_icon
      = link_to_function image_tag('/images/Icons/System/close.png'), :field => "histroy", :title=>"Close", :class => "close_option close_edit", :toggle_id_name => "view_transaction_histroy"
    .tab_looking_right
      .options

  .full_container
    #view_transaction_detail

= button_to_function 'Export to PDF', :style => "float:right;margin-top:10px;", :id => "export_to_pdf_button", :disabled => (@count==0)


