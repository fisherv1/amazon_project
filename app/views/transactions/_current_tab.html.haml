-# locals => {:entity_type, :entity_id}

.full_container
  %input.hidden{:id => "current_mode", :mode => "show"}
  

  #add_new_transaction
    = render :partial => "transactions/new_transaction"
    

  #existing_unbanked_transactions
    = render :partial => "transactions/existing_transactions", :locals => {:entity_type => session[:entity_type], :entity_id => session[:entity_id]}
    

  #edit_unbanked_transaction{:style => "display:none;margin-top:10px;float:left;"}
    .tab_looking_left
    .tab_looking_icon
      = image_tag('edit_icon.png')
      Maintenance
    .tab_looking_right

    %div.tab_close
      .tab_looking_left
      .tab_looking_icon
        = link_to_function image_tag('/images/Icons/System/close.png'), :field => "current", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_unbanked_transaction", :toggle_id_name1 => "add_new_transaction"
      .tab_looking_right
        .options

    .full_container
      #edit_unbanked_transaction_form
  

