#bank_run

  #header
    #page_title
      %h1 Bank Run

    #lol


  - form_for :transaction, :url => "/transaction_headers/run", :html => {:class => "full_container ajax_form"} do |f|
    %h1 STEP 1: Transaction Selection
    All outstanding transactions.
    = link_to_function "More Options", :class => "toggle_button", :toggle_id_name => "enquiry_filter"

    #enquiry_filter{:style => "display:none;float:left;margin-top:20px;"}
      = render :partial => "transactions/bank_run_filter"

    %h1{:style => "margin-top:20px;"} STEP 2: Report Selection
    .form_line
      %input{:type => "checkbox", :readonly => "true", :checked => true} Bank Deposit Sheet
    .form_line
      %input{:type => "checkbox", :name => "BRAS"} Bank Run Audit Sheet
    .form_line
      %input{:type => "checkbox", :name => "CCR"} Credit Cards Receipt
    .form_line
      %input{:type => "checkbox", :name => "RAS"} Receipt Account Summary
    .form_line
      %input{:type => "checkbox", :name => "RTS"} Receipt Type Summary
    .form_line
      %input{:type => "checkbox", :name => "CS"} Campaign Summary

    %h1 STEP 3: Bank Run Process    
    = submit_tag "Run", :id => "transaction_run"
    = button_to_function "Rollback", :style => "float:right;margin-right:20px;display:none;", :id => "rollback"