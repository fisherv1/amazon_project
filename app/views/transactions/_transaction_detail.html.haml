.form_line
  .field_15
    %label Transaction ID
    .display_field_bg
      #{transaction.id}

  .field_15
    %label System Date
    .display_field_bg
      #{transaction.todays_date.to_s}

  .field_15
    %label Transaction Date
    .display_field_bg
      #{transaction.transaction_date.to_s}

  .field_20
    %label Bank Account
    .display_field_bg
      #{ClientBankAccount.find(transaction.bank_account_id).account_number}

.form_line
  .field_15
    %label Receipt Meta Type
    .display_field_bg
      #{PaymentMethodMetaType.find(transaction.payment_method_meta_type_id).name}

  .field_15
    %label Receipt Type
    .display_field_bg
      #{PaymentMethodType.find(transaction.payment_method_type_id).name}

  .field_20
    %label Receipt Type
    .display_field_bg
      #{ReceivedVia.find(transaction.received_via_id).name}

#transaction_payment_view

.form_line{:style => "height:auto;"}
  .field_100{:style => "height:auto;"}
    %label Notes
    %div{:style => "min-height:60px;"}
      #{transaction.notes}

#view_existing_transaction_allocations
  %h2 Allocations
  %table#show_existing_transaction_histroy_allocations_grid

%script{:type => "text/javascript", :charset => "utf-8"}
  $("#show_existing_transaction_histroy_allocations_grid").flexigrid({
  url: '/grids/show_existing_transaction_allocations_grid?transaction_header_id=#{transaction.id}',
  dataType: 'json',
  colModel : [
  {
  display: 'ID',
  name : 'id',
  width : 40,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Receipt Account',
  name : 'receipt_accounts.name',
  width : 200,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Campaign',
  name : 'campaigns.name',
  width : 200,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Source',
  name : 'sources.name',
  width : 180,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Letter',
  name : 'letter_id',
  width : 150,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Amount',
  name : 'amount',
  width : 100,
  sortable : true,
  align: 'left'
  }
  ],
  searchitems : [
  {
  display: 'Receipt Account',
  name : 'receipt_accounts.name'
  },

  {
  display: 'Campaign',
  name : 'campaigns.name'
  },

  {
  display: 'Source',
  name : 'sources.name'
  }
  ],
  sortname: "transaction_allocations.id",
  sortorder: "asc",
  usepager: true,
  title: '',
  useRp: true,
  rp: 20,
  showTableToggleBtn: false,
  width: 'auto',
  height: 'auto'
  });