if ( "<%= escape_javascript(@login_account.nil?.to_s) %>" == "false") {
$("#password_reset_username").attr("disabled", true);
$("#password_reset_email_address").attr("disabled", true);
$("#password_reset_submit").hide();
$("#password_captcha").hide();
$(".login_help_content").hide();
}

$("#login_password_reset_security_questions").html("<%= escape_javascript(render(:partial => "login_password_reset_security_questions"))%>");
$('#login_password_reset_security_questions').dialog({
modal: true,
resizable: false,
draggable :false,
height: 200,
width: 350,
buttons: {
                        "Retry": function(){

                            $(this).dialog('destroy');
                            return true;
                        }
                    }
});
$('#login_password_reset_security_questions').dialog('option', 'title', 'ERROR');
$('#login_password_reset_security_questions').parent().find("a").css("display","none");
$("#login_password_reset_security_questions").parent().css('background-color','#D1DDE6');
$("#login_password_reset_security_questions").css('background-color','#D1DDE6');
$('#login_password_reset_security_questions').dialog('open');