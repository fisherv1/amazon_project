#header
  #page_title
    %h1 System Data
  #lol
    %br.clear
#content_full_page
  .full_container
    .left
      %h1{:style => "margin:5px 0 0 0;"} Select System Data Type:
    &nbsp
    %select#system_data_type.clear_select{:style => "display:inline;width:20%;margin:5px 0 0 0;"}
      %option
        = AmazonSetting.distinct_setting_type

    %br.clear
    %br
    %input{:id => "system_data_mode", :style => "display:none;", :mode => "show"}
    %div#system_data_main_contents{:style => "display:none;"}
      .full_container#system_data_add_data
        .options
          = link_to_function image_tag("close_icon.png" , :class => "close_option", :id=> "system_data_close_entry",:style => "display:none;float:right;", :field => "system_data"), :title=>"Close"
        .title
          = link_to_function image_tag("add_icon.png" , :size => "22x22", :id => "system_data_add_entry", :class => "new_option", :field => "system_data")
          &nbsp
        %h2 New Data
        %div#system_data_add_entry_form{:style => "display:none;"}
          - form_for AmazonSetting.new, :url => {:controller => "amazon_settings", :action => "new_setting"}, :html => {:class => "ajax_form"} do |p|
            = p.text_field :type, {:style => "display:none"}
            .form_line
              .field_30
                = p.label :name, 'Name'
                = p.text_field :name
              .field_35
                = p.label :description, 'Description'
                = p.text_field :description
              .field_10
                = p.label :active, 'Active'
                %label
                = p.check_box :status, {:style => "width:auto;",:checked=> "checked"}
              .field_20{:style => "margin-top: 8px;"}
                = submit_tag 'Submit', :style => 'display:inline;float:right;', :name => 'edit'
          

      %div#system_data_entries

      %br.clear

      %div#edit_system_data_entry
        