#header
  #page_title
    %h1 Keywords Dictionary
#content_full_page
  .full_container
    - form_for Keyword.new, :html => {:class => "ajax_form"} do |p|
      .left
        %h1 Select Keyword Type:
      %select#keyword_type.clear_select{:style => "display:inline;width:20%;"}
        %option
          = KeywordType.distinct_active_keyword_type
      %input{:id => "keyword_mode", :style => "display:none;", :mode => "show"}
      %div#keyword_main_contents{:style => "display:none;margin:10px 0 0 0;"}
        .full_container#keyword_add_data
          = link_to_function image_tag("close_icon.png"), :id=> "keyword_close_entry", :style => "display:none;float:right;", :field => "keyword", :title=>"Close"
          .title
            = link_to_function image_tag("add_icon.png" , :size => "22x22", :id => "keyword_add_entry", :class => "new_option", :field => "keyword")
            &nbsp
          %h2 New Keyword
          %input{:style => "display:none;", :name=>"type_id",:type_id => "",:id => "type_id"}
          %div#keyword_add_entry_form{:style => "display:none;",:type_id => ""}
            = p.text_field :type, {:style => "display:none"}
            .form_line
              .field_20
                = p.label :keyword_type_id, "<span class='asterisk'>*</span>Keyword Type"
                %select#keyword_type.clear_select{:style => "display:inline;width:20%;"}
                %option
                  = KeywordType.distinct_active_keyword_type
              .field_20
                = p.label :name, "<span class='asterisk'>*</span>Name"
                = p.text_field :name,:class=>'mandantory_field',:mandantory_field1=>"keyword_name",:submit_button_id=>"keyword_new_submit"
              .field_20
                = p.label :description, 'Description'
                = p.text_field :description
              .field_7
                = p.label :active
                %label
                = p.check_box :status, {:style => "width:auto;",:checked=> "checked"}
              .field_20
                %label &nbsp
                = submit_tag 'Submit', :style => 'display:inline;float:right;', :name => 'edit',:id=>"keyword_new_submit",:disabled=>true

    %div#keyword_entries
    %br.clear
    %div#edit_keyword_entry

    