    = link_to_function "<h1>Role</h1>", :class=>"tab_switch_with_page_initial", :field => "role_page"
  .tab_switch_right.active.left{:field =>"role_page"}

  .tab_switch_left.left{:field =>"role_condition_page"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Role Condition</h1>", :class=>"tab_switch_button page_initial hidden", :url => "/role_conditions/page_initial", :method => "GET", :render_page => "/role_conditions/role_condition_management", :field => "role_condition_page"
    = link_to_function "<h1>Role Condition</h1>", :class=>"tab_switch_with_page_initial", :field => "role_condition_page"
  .tab_switch_right.left{:field =>"role_condition_page"}

  .tab_switch_left.left{:field =>"condition_dictionary_page"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Conditions Dictionary</h1>", :class=>"tab_switch_button page_initial hidden", :url => "/role_conditions/condition_dictionary_page_initial", :method => "GET", :render_page => "/administrations/role_conditions", :field => "condition_dictionary_page"
    = link_to_function "<h1>Conditions Dictionary</h1>", :class=>"tab_switch_with_page_initial", :field => "condition_dictionary_page"
  .tab_switch_right.left{:field =>"condition_dictionary_page"}

