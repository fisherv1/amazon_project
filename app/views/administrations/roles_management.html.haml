  .container_icon.left{:align => 'center', :class => "container_icon_color"}
    = link_to_function "<h1>Role</h1>",:class=>"show_hide_button", :show_id_name => "role_part",:hide_id_name => "role_condition_part"
  .profile_tab_right.left{:field =>"role_part", :style => "background-image:url(/images/round_right.png);"}
  .profile_tab_left.left{:field =>"role_condition_part"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Role Condition</h1>", :class=>"show_hide_button", :show_id_name => "role_condition_part",:hide_id_name => "role_part",:id => "click_condition"
