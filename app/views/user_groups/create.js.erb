<% unless flash[:error].nil? %>
 $("#flash_message").html("<%=escape_javascript(flash[:error])%>");
 $("#flash_message").dialog( {
 modal:true,
 position: 'top',
 buttons: {

 OK: function(){

 $(this).dialog('close');
 }
 }
 });

  $('#flash_message').dialog('open');
<%else %>

 $('#user_group_user').append('<%= escape_javascript(render(:partial => "user_groups/new_group_user", :locals =>{:login_account => @login_account })) %>');
 $('#<%= dom_id(@login_account) %>').show('slide'); 



<%end%>