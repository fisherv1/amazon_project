-# Displays An Query Criteria
-div_for(query_criteria, :class => 'info_container') do
  .header_container
    .title
      %h3= query_criteria.formatted_info
    .options
      = link_to image_tag('edit_icon.png'), edit_query_criteria_path(query_criteria), :class => 'get'
      = link_to image_tag('delete_icon.png'), query_criteria_path(query_criteria), :class => 'delete'
    %br.clear