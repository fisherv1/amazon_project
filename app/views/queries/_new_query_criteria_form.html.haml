-form_for ([@query_header, @query_criteria]), :html => {:class => 'ajax_form'} do |f|
  .field_50
    .form_line
      = f.label :table_name, 'Select Table'
      = f.collection_select :table_name, TableMetaMetaType.find(:all, :order => "name"), :name, :name, {:include_blank => true}, {:class => "show_fields clear_select", :update_field => "criteria"}
      %br.clear
    .form_line
      = f.label :field_name, 'Select Field'
      %select#fields_criteria{:name => "query_criteria[field_name]", :size => "12"}
      %br.clear

  .field_50
    #attribute_description_criteria{:style => "margin:82px 0 30px 0;"}
      %label &nbsp;

    .form_line
      %label Select Operator
      %select{:id => "query_criteria[operator]", :name => "query_criteria[operator]", :class => "clear_select"}
        %option
        -TableMetaMetaType::OPERATORS.keys.sort.each do |key|
          %option{:value => key} #{key}
      %br.clear
    .form_line
      %label Input Value
      = f.text_field :value, :style => "width:70%;", :disabled => false
      %input{:type => "checkbox", :style => "width:20%;", :name => "runtime" :id => "new_runtime"}
      %label{:style => "width:10%;display:inline"} R/T
      %br.clear
    .form_line
      %input{:type => "radio", :style => "width:20%;", :name => "query_criteria[option]", :value => "And", :checked => true}
      %label{:style => "display:inline"} And
      %input{:type => "radio", :style => "width:20%;", :name => "query_criteria[option]", :value => "Or"}
      %label{:style => "display:inline"} Or
      %br.clear


    = submit_tag "Apply Criterion"

%br.clear