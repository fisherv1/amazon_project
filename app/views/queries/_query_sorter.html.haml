-# Displays An Query Sorter
-div_for(query_sorter, :class => 'header_container') do
  %div
    .title
      %h3= query_sorter.formatted_info
    .options
      = link_to image_tag('delete_icon.png'), query_sorter_path(query_sorter), :class => 'delete' if query_sorter.query_header.status == true,:field => "Query Sorter",:error_message_field =>"Query Sorter"
    %br.clear