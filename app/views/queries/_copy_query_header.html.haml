.container{:style => "background-image:none;"}
  -form_for @query_header_type, :url => {:controller => "query_headers", :action => "create"}, :html => {:class => 'ajax_form'} do |f|
    .form_line
      = f.label :name, "<span class='asterisk'>*</span>Name"
      = f.text_field :name, :value => "", :id=>"new_copy_name", :class=>"mandantory_field", :mandantory_field1=>"new_copy_name", :submit_button_id=>"new_copy_submit", :name => "query_header[name]"
    
    .form_line
      = f.label :description, 'Description'
      = f.text_field :description, :name => "query_header[description]"
      %input{:style => "display:none", :name =>"new"}
      %input{:style => "display:none", :name => "source_id", :value => "#{@query_header.id}"}
    
    = submit_tag "Save", :id=>"new_copy_submit", :disabled=>true