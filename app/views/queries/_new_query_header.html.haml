.container{:style => "background-image:none;"}
  -form_for @query_header, :html => {:class => 'ajax_form'} do |f|
    .form_line
      = f.label :name, "<span class='asterisk'>*</span>Name"
      = f.text_field :name, :value => "", :class=>"mandantory_field", :mandantory_field1=>"query_header_name"
    
    .form_line
      = f.label :description, 'Description'
      = f.text_field :description
      %input{:style => "display:none", :name =>"new"}
    
    = submit_tag "Save", :disabled=>true