-# Displays An Query Selection
-div_for(query_selection, :class => 'header_container toggle_options', :field => "query_detail") do
  %div
    .title
      %h3= query_selection.formatted_info
    .options{:style => "display:none;"}
      = link_to image_tag('delete_icon.png'), query_selection_path(query_selection), :class => 'delete', :field => "Query Selection", :error_message_field =>"Query Selection" if query_selection.query_header.status == true
    %br.clear