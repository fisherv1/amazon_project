#message_templates_page
  .full_container
    %input.hidden{:id => "message_template_mode", :mode => "show"}

    #add_new_message_template
      = render :partial => "/communication/new_message_template"

    #existing_message_templates
      = render :partial => "/communication/existing_message_templates"

    #edit_message_template{:style => "display:none;margin-top:10px;float:left;width:100%;"}
      .tab_looking_left
      .tab_looking_icon
        = image_tag('edit_icon.png')
        Maintenance
      .tab_looking_right

      %div.tab_close
        .tab_looking_left
        .tab_looking_icon
          = link_to_function image_tag('/images/Icons/System/close.png'), :field => "message_template", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_message_template", :toggle_id_name1 => "add_new_message_template"
        .tab_looking_right
          .options

      .full_container
        #edit_message_template_form