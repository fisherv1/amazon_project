#message_templates_page
  .full_container
    %input.hidden{:id => "message_template_mode", :mode => "show"}

    #add_new_message_template
      = render :partial => "/communication/new_message_template"

    #existing_message_templates
      = render :partial => "/communication/existing_message_templates"

    #edit_message_template{:style => "display:none;margin-top:10px;float:left;"}
      .tab_looking_left
      .tab_looking_icon
        = image_tag('edit_icon.png')
        Maintenance
      .tab_looking_right

      %div.tab_close
        .tab_looking_left
        .tab_looking_icon
          = link_to_function image_tag('/images/Icons/System/close.png'), :field => "message_template", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_message_template", :toggle_id_name1 => "add_new_message_template"
        .tab_looking_right
          .options

      .full_container
        #edit_message_template_form

%script{:type => "text/javascript", :charset => "utf-8"}
  $("#show_message_templates_grid").flexigrid({
  url: '/grids/show_message_templates_grid',
  dataType: 'json',
  colModel : [
  {
  display: 'ID',
  name : 'id',
  width : 40,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Name',
  name : 'name',
  width : 570,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Created At',
  name : 'created_at',
  width : 270,
  sortable : true,
  align: 'left'
  }

  ],
  sortname: "name",
  sortorder: "asc",
  usepager: true,
  title: 'Message Templates',
  useRp: true,
  rp: 20,
  showTableToggleBtn: false,
  width: 'auto',
  height: 'auto'
  });