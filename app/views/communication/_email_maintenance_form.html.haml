%script{:type => "text/javascript"}
  :plain
    $(function() {
      $('.new_email_required_field').keyup(function() {
          if($('#new_email_subject').val() == null || $('#message_template_id').val() == null || $('#list_header_id').val() == '') {
              $('#new_email_submit').attr('disabled', true);
          } else {
              $('#new_email_submit').removeAttr('disabled');
          }
      });
    });

.full_container#email_maintenance_search

  - form_for :email, nil, :url => { :action => "search_email" }, :html => {:class => 'ajax_form', :id => "search_email_form"}  do |f|
    .full_container
      %h2 Email Maintenance
      .form_line
        .field_20
          = f.label :start_date, "Start Date"
          %input{:name => "start_date", :style => "width:82% !important;",:id => "system_log_start_date", :class => "startdatepick", :end_date => "system_log_end_date"}
        .field_20
          = f.label :end_date, "End Date"
          %input{:name => "end_date", :style => "width:82% !important;", :id => "system_log_end_date", :class => "enddatepick", :start_date => "system_log_start_date"}
      .form_line
        .field_20
          = f.label :to_be_removed, 'To Be Removed'
          = f.check_box :to_be_removed, :checked => false
        .field_20
          = f.label :dispatch_date, 'Sent Already'
          = f.check_box :dispatch_date, :checked => false
        .field_20
          = f.label :status, 'Active'
          = f.check_box :status, :checked => false

    = submit_tag "Submit", :id => "email_maintenance_search_submit"



