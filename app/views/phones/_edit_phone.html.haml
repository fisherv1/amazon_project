-# The form to edit an phone
-form_for @phone, :html => {:class => 'ajax_form edit_phone'} do |phone|
  .header_container
    .title
      %h1 Edit Phone
    .options
      = link_to image_tag('close_icon.png'), phone_path(@phone), :class => 'get', :field => "contact", :title=>"Close"
    %br{ :style=>"clear: both;"}
    = render :partial => 'phone_form', :locals => { :phone => phone,:edit => "edit" }
    = submit_tag 'Submit' ,:id => "contact_phone_submit_edit" ,:check_field => "phone_value_edit"
