.form_line
  .field_20
    = phone.label :contact_meta_type_id, 'Type'
    -if @organisation.nil?
      -if edit == "edit"
        = phone.collection_select :contact_meta_type_id, Contact.phone_types - @person.personal_phone_types + @phone.phone_type, :id, :name
      -else
        = phone.collection_select :contact_meta_type_id, Contact.phone_types - @person.personal_phone_types, :id, :name
    -else
      -if edit == "edit"
        = phone.collection_select :contact_meta_type_id, Contact.phone_types - @organisation.personal_phone_types + @phone.phone_type, :id, :name
      -else
        = phone.collection_select :contact_meta_type_id, Contact.phone_types - @organisation.personal_phone_types, :id, :name

  .field_15
    = phone.label :pre_value, "Pre Value"
    = phone.text_field :pre_value,:class => "integer_field"
  .field_40
    = phone.label :value, "value"
    = phone.text_field :value , :class => "integer_field empty_field" , :id => "phone_value_edit"
  .field_15
    = phone.label :post_value, "Pos value"
    = phone.text_field :post_value
