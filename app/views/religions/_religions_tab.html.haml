.full_container
  %input.hidden{:id => "religion_mode", :mode => "show"}

  #add_new_religion
    = render :partial => "religions/new_religion"

  #existing_religions
    = render :partial => "religions/existing_religions"

  #edit_religion{:style => "display:none;margin-top:10px;float:left;width:100%;"}
    -#.tab_looking_left
    -#.tab_looking_icon
    -#  = image_tag('edit_icon.png')
    -#  %h3 Edit
    -#.tab_looking_right
    .container_corner.profile_tab_left_corner.left
    .container_edit
      .options_left{:style => "margin-right:10px;"}
        = image_tag('edit_icon.png', :class => "edit_icon_right")
      %h3 Edit
    .container_corner.profile_tab_right_corner.left
    .full_container
      .options
        = link_to_function image_tag('close_icon.png'), :field => "religion", :style => "display:none;", :title=>"Close", :class => "close_option", :toggle_id_name => "edit_religion", :toggle_id_name1 => "add_new_religion"
      #edit_religion_form

%script{:type => "text/javascript", :charset => "utf-8"}
  $("#show_religions_grid").flexigrid({
  url: '/grids/show_religions_grid',
  dataType: 'json',
  colModel : [
  {
  display: 'ID',
  name : 'id',
  width : 40,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Name',
  name : 'name',
  width : 100,
  sortable : true,
  align: 'left'
  },

  {
  display: 'Description',
  name : 'description',
  width : 200,
  sortable : true,
  align: 'left'
  }
  ],
  searchitems : [
  {
  display: 'Name',
  name : 'name'
  },

  {
  display: 'Description',
  name : 'description'
  }
  ],
  sortname: "id",
  sortorder: "asc",
  usepager: true,
  title: 'Religions',
  useRp: true,
  rp: 20,
  showTableToggleBtn: false,
  width: 'auto',
  height: 'auto'
  });