$('#sql_result').html('<%= escape_javascript(render(:partial => "queries/query_results", :locals => {:people => @people})) %>');
$('#query_id_for_list').val('<%= escape_javascript("#{@query_header.id}") %>');

$('#query_results').dataTable({
        "bLengthChange":false,
        "iDisplayLength":20,
        "bAutoWidth":false,
        "sDom":'lfrtpi',
        "aoColumns":[
            { "bSortable": false,
              'sWidth': "10%"},
            { 'sType': 'numeric'},
              null,
            ]
    });
    
$('#result_div').dialog({
  modal: true,
  resizable: true,
  draggable: true,
  height: 700,
  width: 1300,
  buttons: {
    Ok: function() {
      $(this).dialog('close');
    }
  }
});

$('#result_div').dialog('open');
