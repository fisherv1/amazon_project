#header
  #page_title
    %h1 License Info
  #lol
  %br.clear

.container
  %h2 Client Info
  .form_line
    %p #{@client_organisation.id}-#{@client_organisation.full_name}
  - form_for @client_setup do |f|
    .form_line
      .field_10
        = f.label :client_id, "Client ID"
        = f.text_field :client_id
        %input{:style => "display:none;", :name => "license"}
      .field_20
        = f.label :client_rego, "Client Registration"
        = f.text_field :client_rego
      .field_10
        = f.label :installation_date, "Installation Date"
        = f.text_field :installation_date, :class => "startdatepick", :end_date => "client_setup_halt_date"
      .field_10
        = f.label :halt_date, "Halt Date"
        = f.text_field :halt_date, :class => "enddatepick", :start_date => "client_setup_installation_date"

    %br.clear
    %p &nbsp;

    .container
      %h2 System Info
      .form_line
        .field_15
          = f.label :system_type, "Type"
          = f.text_field :system_type
        .field_10
          = f.label :hosting_status, "Hosting"
          = f.text_field :hosting_status
        .field_5
          = f.label :system_status, "Status"
          = f.check_box :system_status
        .field_15
          = f.label :system_purchase, "System Purchase"
          = f.text_field :system_purchase
        .field_15
          = f.label :maximum_core_records, "Maximum Core Records"
          = f.text_field :maximum_core_records, :class => "integer_field"
        .field_20
          = f.label :number_of_users, "Number of System Users"
          = f.text_field :number_of_users, :class => "integer_field"
      .container
        %h3 Module Installed
        .container_half
          .left
            Module Name
          .right
            Install Time
        .container_half
          .left
            Module Name
          .right
            Install Time
        .container_half
          .left
            Module Name
          .right
            Install Time
        .container_half
          .left
            Module Name
          .right
            Install Time
    = submit_tag "Submit"

