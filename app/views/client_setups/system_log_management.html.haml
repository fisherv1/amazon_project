#header
  #page_title
    %h1 Audit Trail Entries
  #lol
    %br.clear

    %br.clear
.tab_switch{:style => "margin-left:15px;"}

  .tab_switch_left.active.left{:field =>"search_page"}
  .container_icon.active.left{:align => 'center'}
    = link_to_function "<h1>Search</h1>",:class=>"tab_switch_button active", :field => "search_page"
  .tab_switch_right.active.left{:field =>"search_page"}

  .tab_switch_left.left{:field =>"archive_page"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Archive</h1>", :class=>"tab_switch_button", :field => "archive_page"
  .tab_switch_right.left{:field =>"archive_page"}

%br.clear

#search_page.tab_switch_container.active
  .container#system_log_search

    - form_tag("/client_setups/search_system_log", :class => "ajax_form") do
      %table
        %tr
          %td{:style => "padding:0.5em"}
            Username:
          %td{:style => "padding:0.5em"}
            = text_field_tag :user_name, nil, :style => "width:150px;"
          %td{:style => "padding:0.5em", :id => "system_log_user_name_check"}
            &nbsp;
          %td{:style => "padding:0.5em"}
            &nbsp;
        %tr
          %td{:style => "padding:0.5em"}
            Start Date:
          %td{:style => "padding:0.5em"}
            %input{:name => "start_date", :style => "width:150px;", :id => "system_log_start_date", :class => "startdatepick", :end_date => "system_log_end_date"}
          %td{:style => "padding:0.5em"}
            End Date:
          %td{:style => "padding:0.5em"}
            %input{:name => "end_date", :style => "width:150px;", :id => "system_log_end_date", :class => "enddatepick", :start_date => "system_log_start_date"}
        %tr
          %td{:style => "padding:0.5em"}
            Entry Type:
          %td{:style => "padding:0.5em"}
            %select{:name => "status", :id => "system_log_status"}
              %option{:value => "Active"} Active
              %option{:value => "Inactive"} Inactive

          %td{:style => "padding:0.5em"}
            &nbsp;
          %td{:style => "padding:0.5em"}
            &nbsp;

      = submit_tag("Search", :id => "system_log_search_submit")

  .container#system_log_search_results{:style => "display:none;"}
    %table#system_log_search_grid

  .container#system_log_export_options{:style => "display:none;"}
    - form_tag("/reports/generate_system_log_pdf") do
      %input{:name => "user_name", :style => "display:none;", :id => "system_log_export_user_name"}
      %input{:name => "start_date", :style => "display:none;", :id => "system_log_export_start_date"}
      %input{:name => "end_date", :style => "display:none;", :id => "system_log_export_end_date"}
      %input{:name => "status", :style => "display:none;", :id => "system_log_export_status"}
      = submit_tag("Export PDF")

#archive_page.tab_switch_container
  .container#system_log_archive

    - form_tag("/client_setups/archive_system_log", :class => "ajax_form") do
      %table
        %tr
          %td{:style => "padding:0.5em"}
            Username:
          %td{:style => "padding:0.5em"}
            = text_field_tag :archive_user_name, nil, :style => "width:150px;"
          %td{:style => "padding:0.5em", :id => "system_log_archive_user_name_check"}
            &nbsp;
          %td{:style => "padding:0.5em"}
            &nbsp;
        %tr
          %td{:style => "padding:0.5em"}
            Start Date:
          %td{:style => "padding:0.5em"}
            %input{:name => "start_date", :style => "width:150px;", :id => "archive_system_log_start_date", :class => "startdatepick", :end_date => "archive_system_log_end_date"}
          %td{:style => "padding:0.5em"}
            End Date:
          %td{:style => "padding:0.5em"}
            %input{:name => "end_date", :style => "width:150px;", :id => "archive_system_log_end_date", :class => "enddatepick", :start_date => "archive_system_log_start_date"}

      = submit_tag("Search", :id => "system_log_archive_submit")

  .container#system_log_archive_results{:style => "display:none;"}
    %table#system_log_archive_grid

  .container#system_log_archive_options{:style => "display:none;"}
    - form_tag("/client_setups/archive_system_log_entries") do
      %input{:name => "user_name", :style => "display:none;", :id => "system_log_archive_user_name"}
      %input{:name => "start_date", :style => "display:none;", :id => "system_log_archive_start_date"}
      %input{:name => "end_date", :style => "display:none;", :id => "system_log_archive_end_date"}
      = submit_tag("Archive")
