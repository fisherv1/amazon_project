- form_for transaction_allocation, :html => {:class => "ajax_form", :submit_button_id => "allocation_submit_button"} do |f|
  .form_line
    .field_15
      = f.label :receipt_account_id, "<span class='asterisk'>*</span>Receipt Account"
      = f.collection_select :receipt_account_id, ReceiptAccount.all, :id, :name

    .field_15
      = f.label :campaign_id, "Campaign"
      = f.collection_select :campaign_id, Campaign.all, :id, :name

    .field_20
      = f.label :source_id, "Source"
      = f.collection_select :source_id, Source.all, :id, :name

    .field_10
      = f.label :letter_id, "Letter"
      %select

    .field_15
      = f.label :amount, "<span class='asterisk'>*</span>Amount"
      = f.text_field :amount
  .full_container
    .title
      %h3 Bank Extension
    .options
      = link_to_function image_tag('/images/Icons/System/expand.png'), :class => "toggle_button close_image", :toggle_id_name => "bank_extension_form"
    #bank_extension_form.hidden
      .form_line
        .field_15
          = f.label :extention_type, 'Extention Type'
          %select{:name => "transaction_allocation[extention_type]"}
            %option{:value => "Person"} Person
            %option{:value => "Organisation"} Organisation
            
        .field_15
          = f.label :extention_id, 'Extention ID'
          = f.text_field :extention_id
        .field_15
          = f.label :extention_name, 'Extention Name'
          .display_field_bg           
        .field_15
          = f.label :cluster_type, 'Cluster Type'
          %select{:name => "transaction_allocation[cluster_type]"}
            %option{:value => "Person"} Person
            %option{:value => "Organisation"} Organisation
        .field_15
          = f.label :cluster_id, 'Cluster ID'
          = f.text_field :cluster_id
        .field_15
          = f.label :cluster_name, 'Cluster Name'
          .display_field_bg
  = submit_tag '   Add   '