-# level

-url = @page.nil? ? "/organisation_relationships/show_branches" : "/organisation_relationships/profile_show_branches"
%table#show_zero_organisations{:class=>"selectable_grid",:db_click_function=>"true", :db_click_url=>"#{url}", :params2 => "#{level}"}

%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    delete_from_a_grid = function(){
    delete_from_grid($("#show_zero_organisations tr.trSelected").attr('id'), "#organisation_relationship_mode", "delete", "/organisation_relationships/");
    };
    $("#show_zero_organisations").flexigrid({
    url: '/grids/show_zero_organisation_grid',
    dataType: 'json',
    colModel : [
    {
    display: 'ID',
    name : 'id',
    width : 40,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Full Name',
    name : 'full_name',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Phone',
    name : 'primary_phone_num',
    width : 100,
    sortable : false,
    align: 'left'
    },
    {
    display: 'Email',
    name : 'primary_email_address',
    width : 100,
    sortable : false,
    align: 'left'
    }
    ],
    buttons : [
            {name: '', bclass: 'delete delete_button_on_grid', onpress : delete_from_a_grid},
        ],
    searchitems : [
    {
    display: 'Full Name',
    name : 'full_name'
    }
    ],
    sortname: "id",
    sortorder: "asc",
    usepager: true,
    useRp: true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });