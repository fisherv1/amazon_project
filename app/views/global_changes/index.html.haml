#header
  #page_title
    %h1 Global Change

.tab_switch{:style => "margin-right:15px;"}
  .tab_switch_left.active.left{:field =>"person_part"}
  .container_icon.active.left{:align => 'center'}
    = link_to_function "<h1>Person</h1>",:class=>"tab_switch_button page_initial hidden", :url => "/global_changes/page_initial",:method => "GET", :render_page => "/global_changes/people_index", :field => "person_part"
