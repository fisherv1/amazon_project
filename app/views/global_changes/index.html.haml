  .tab_switch_right.active.left{:field =>"person_part"}

  .tab_switch_left.left{:field =>"organisation_part"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Organisation</h1>", :class=>"tab_switch_button page_initial hidden", :url => "/global_changes/page_initial", :method => "GET", :render_page => "/global_changes/org_index", :field => "organisation_part"
