  .tab_switch_right.left{:field =>"organisation_part"}
%br.clear

#person_part.tab_switch_container.active.full_container
  = render :partial => '/global_changes/people_index'

#organisation_part.tab_switch_container.full_container
  = render :partial => '/global_changes/org_index'



 
