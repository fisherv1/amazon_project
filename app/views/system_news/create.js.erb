<% if @system_news.errors.empty? -%>
  $('#system_news_container').html('<%= escape_javascript(render(:partial => "system_news/system_news_part", :locals => {:current_news => SystemNews.first_three})) %>');
  $('#news_offset_number').val('0');
  $('#new_system_news_dialog').dialog('close');
  <%- else %>
$("#flash_message_text").html("<%= escape_javascript(flash[:error]) %>");
$('#flash_message').dialog( {
    modal: false,
    resizable: false,
    draggable: false,
    height: "auto",
    width: "auto",
    buttons: {
      Ok: function() {
        $(this).dialog('close');
      }
    }
  });
$('#flash_message').dialog('option', 'title', 'Error');
$('#flash_message').parent().find("a").css("display","none");
$("#flash_message").parent().css('background-color','#D1DDE6');
$("#flash_message").css('background-color','#D1DDE6');
$('#flash_message').dialog('open');
<% end -%>
enable_form_after_submit_finish();

