<% if @system_news.errors.empty? -%>
  $('#system_news_holder').html('<%= escape_javascript(render(:partial =>"system_news/system_news", :collection => SystemNews.first_three )) %>');
  $('#new_system_news_dialog').dialog('close');
  <%- else %>
  $("#flash_message").html("<%= escape_javascript(flash[:error]) %>");
$('#flash_message').dialog( {
    modal: true,
     resizable: false,
    draggable: true,
    position: 'top',
    buttons: {
      Ok: function() {
        $(this).dialog('close');
      }
    }
  });
  $('#flash_message').dialog('option', 'title', 'Error');
$('#flash_message').dialog('open');
<% end -%>


