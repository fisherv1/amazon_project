      = link_to_function image_tag('add_icon.png'), :id=>"add_address", :class=>"person_address_toggle_button add_icon clear_form_to_address", :toggle_id_name => "new_address" if (!person.nil? && !person.new_record?)
    %h1 Add Address
    %input{:id => "address_hidden_tab" :mode => "show", :style => "display:none"}
    
    =# Initially hidden new address form
    #address_check_type
      = render :partial => '/addresses/personal_address_type', :locals => { :address => @address }
       
