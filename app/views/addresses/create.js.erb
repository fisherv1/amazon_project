<% if @address.errors.empty? -%>
  $('#addresses').prepend('<%= escape_javascript(render(:partial => @address)) %>');
  $("#new_address")[0].reset();
  $("#new_address").hide();

  $('#address_mode').attr('mode','show');
  $('.new_option[field="address"]').css("display","");
   $('#address_hidden_tab').attr('mode','show');
  $('.person_address_toggle_button').css("display","");
  $('.person_address_close').css("display","none");
  $('#<%= dom_id(@address) %>').effect('slide', {direction:'right'});  
<% end -%>


