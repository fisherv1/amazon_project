-# The options to edit or add an address
.form_line
  .field_20
    = address.label :address_type_id, 'Type'
    = address.collection_select :address_type_id, AddressType.active_address_type, :id, :name
    
  .field_40
    = address.label :building_name, 'Building Name'
    = address.text_field :building_name   
  %br.clear
.form_line
  .field_20
    = address.label :suite_unit, 'Unit Number'
    = address.text_field :suite_unit
  .field_20
    = address.label :street_number, 'Street Number'
    = address.text_field :street_number
  .field_60
    = address.label :street_name, 'Street Name'
    = address.text_field :street_name
  %br.clear
.form_line
  .field_33
    = address.label :town, 'Suburb'
    = address.text_field :town
    = link_to_function image_tag 'application_view_detail.png', :style => 'display:inline', :id => "launch_address_assistant"
  .field_33
    = address.label :district, 'District'
    = address.text_field :district
  .field_33
    = address.label :region, 'Region'
    = address.text_field :region
  %br.clear
.form_line
  .field_33
    = address.label :state, 'State'
    = address.text_field :state
    = link_to_function image_tag 'application_view_detail.png', :style => 'display:inline', :id => "launch_address_assistant"
  .field_33
    = address.label :postal_code, 'Postal Code'
    = address.text_field :postal_code
    = link_to_function image_tag 'application_view_detail.png', :style => 'display:inline', :id => "launch_address_assistant"
  .field_33
    = address.label :country, 'Country'
    = address.collection_select :country_id, Country.all, :id, :short_name, {:include_blank => true}
  %br.clear


%div#address_form_assistant{:style => "display:none"}

  Suburb:
  %input{:type => "text", :id => "address_assistant_suburb", :class => "address_assistant_search", :size => "15"}
  State:
  %input{:type => "text", :id => "address_assistant_state", :class => "address_assistant_search" , :size => "5"}
  Postcode:
  %input{:type => "text", :id => "address_assistant_postcode", :class => "address_assistant_search", :size => "5"}

  %div#address_assistant_postcodes

    %table#address_assistant
      %thead
        %tr
          %th{:style => "background-color:gray;color:white;"} Suburb
          %th{:style => "background-color:gray;color:white;"} State
          %th{:style => "background-color:gray;color:white;"} Postcode
          %th{:style => "background-color:gray;color:white;"} Country
      %tbody
        - @postcodes.each do |postcode|
          %tr{:postcode_id => postcode.id}
            %td= postcode.suburb
            %td= postcode.state
            %td= postcode.postcode
            %td= postcode.country.short_name unless postcode.country_id.nil?