-# The form to edit an address
-form_for @address, :html => {:class => 'ajax_form'} do |address|
  %fieldset
    .header_container
      .title
        %h3 Edit Address
      .options
        = link_to image_tag('close_icon.png'), address_path(@address), :class => 'get'
      %br{ :style=>"clear: both;"}
    = render :partial => '/addresses/address_form', :locals => { :address => address }
    = submit_tag 'Submit'
