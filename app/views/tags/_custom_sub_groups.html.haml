%div{:id => "sub_groups_in_group_#{@group.id}"}
  -for sub_group in @group.tags do
    .container{:class => "toggle_multilevel_options", :level => "2"}
      %div.options{:style => "display:none;"}
        = image_tag("edit_icon.png" , :class => "multilevel_edit_option", :level => "2" )
        = image_tag("delete_icon.png" , :class => "multilevel_delete_option", :level => "2", :id => "delete_custom_group", :custom_group_type_id => @group.id, :custom_group_id => sub_group.id)
      = sub_group.name