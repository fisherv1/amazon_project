<% unless flash[:error].nil? %>
$("#flash_message").html("<%= escape_javascript(flash[:error]) %>");
$('#flash_message').dialog( {
    modal: true,
    resizable: true,
    draggable: true,
    position: 'top',
    buttons: {
      Ok: function() {
        $(this).dialog('close');
      }
    }
  });
$('#flash_message').dialog('open');
<% else %>

$("#tag_form").html('');
$(".show_tags[tag_types_id = " + "<%= escape_javascript("#{@tag_type.id}")%>" + "]").click();
$('#tag_form').dialog('close');

<% end %>
