<% unless flash[:error].nil? %>
$("#flash_message").html("<%= escape_javascript(flash[:error]) %>");
$('#flash_message').dialog( {
    modal: true,
    resizable: true,
    draggable: true,
    position: 'top',
    buttons: {
      Ok: function() {
        $(this).dialog('close');
      }
    }
  });
$('#flash_message').dialog('open');
<% else %>

$("#tag_form").html('');
$('#tag_form').dialog('close');
$("#tags_<%= escape_javascript("#{@tag_type.id}")%> > ul").append("<%= escape_javascript(render(:partial => '/tags/custom_sub_group', :locals => {:group_type => @tag})) %>");
<% end %>
